/* 全局样式 */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  font-size: 28rpx;
  color: #1E293B;
  background-color: #F5F5F5;
  box-sizing: border-box;
}

/* ===== 主题色 ===== */
.text-primary { color: #3B82F6; }
.text-cta { color: #F97316; }
.text-fresh { color: #10B981; }
.text-warm { color: #F59E0B; }
.text-rose { color: #F43F5E; }
.text-sub { color: #64748B; }
.text-muted { color: #94A3B8; }
.text-main { color: #1E293B; }
.text-white { color: #ffffff; }

.bg-primary { background-color: #3B82F6; }
.bg-cta { background-color: #F97316; }
.bg-fresh { background-color: #10B981; }
.bg-warm { background-color: #F59E0B; }
.bg-rose { background-color: #F43F5E; }
.bg-white { background-color: #ffffff; }
.bg-page { background-color: #F5F5F5; }

/* ===== 布局 ===== */
.flex { display: flex; }
.flex-col { flex-direction: column; }
.flex-row { flex-direction: row; }
.flex-wrap { flex-wrap: wrap; }
.flex-1 { flex: 1; }
.items-center { align-items: center; }
.items-start { align-items: flex-start; }
.items-end { align-items: flex-end; }
.justify-center { justify-content: center; }
.justify-between { justify-content: space-between; }
.justify-end { justify-content: flex-end; }
.shrink-0 { flex-shrink: 0; }

/* ===== 间距 ===== */
.p-0 { padding: 0; }
.p-2 { padding: 16rpx; }
.p-3 { padding: 24rpx; }
.p-4 { padding: 32rpx; }
.px-2 { padding-left: 16rpx; padding-right: 16rpx; }
.px-3 { padding-left: 24rpx; padding-right: 24rpx; }
.px-4 { padding-left: 32rpx; padding-right: 32rpx; }
.py-2 { padding-top: 16rpx; padding-bottom: 16rpx; }
.py-3 { padding-top: 24rpx; padding-bottom: 24rpx; }
.py-4 { padding-top: 32rpx; padding-bottom: 32rpx; }
.pt-2 { padding-top: 16rpx; }
.pt-3 { padding-top: 24rpx; }
.pb-2 { padding-bottom: 16rpx; }
.pb-3 { padding-bottom: 24rpx; }
.m-0 { margin: 0; }
.mx-4 { margin-left: 32rpx; margin-right: 32rpx; }
.mt-1 { margin-top: 8rpx; }
.mt-2 { margin-top: 16rpx; }
.mt-3 { margin-top: 24rpx; }
.mt-4 { margin-top: 32rpx; }
.mb-1 { margin-bottom: 8rpx; }
.mb-2 { margin-bottom: 16rpx; }
.mb-3 { margin-bottom: 24rpx; }
.ml-2 { margin-left: 16rpx; }

.gap-1 { gap: 8rpx; }
.gap-2 { gap: 16rpx; }
.gap-3 { gap: 24rpx; }
.gap-4 { gap: 32rpx; }

/* ===== 文字 ===== */
.text-xs { font-size: 20rpx; }
.text-sm { font-size: 24rpx; }
.text-base { font-size: 28rpx; }
.text-lg { font-size: 32rpx; }
.text-xl { font-size: 36rpx; }
.text-2xl { font-size: 40rpx; }
.font-medium { font-weight: 500; }
.font-semibold { font-weight: 600; }
.font-bold { font-weight: 700; }
.text-center { text-align: center; }
.text-right { text-align: right; }
.text-left { text-align: left; }
.line-through { text-decoration: line-through; }
.leading-relaxed { line-height: 1.625; }
.truncate { overflow: hidden; text-overflow: ellipsis; white-space: nowrap; }

/* ===== 圆角 ===== */
.rounded { border-radius: 8rpx; }
.rounded-lg { border-radius: 16rpx; }
.rounded-xl { border-radius: 24rpx; }
.rounded-2xl { border-radius: 32rpx; }
.rounded-full { border-radius: 9999rpx; }

/* ===== 边框 ===== */
.border { border: 1rpx solid #E2E8F0; }
.border-2 { border: 2rpx solid #E2E8F0; }
.border-b { border-bottom: 1rpx solid #E2E8F0; }
.border-t { border-top: 1rpx solid #E2E8F0; }
.border-primary { border-color: #3B82F6; }
.border-rose { border-color: #F43F5E; }

/* ===== 宽高 ===== */
.w-full { width: 100%; }
.h-full { height: 100%; }

/* ===== 定位 ===== */
.relative { position: relative; }
.absolute { position: absolute; }
.fixed { position: fixed; }
.top-0 { top: 0; }
.left-0 { left: 0; }
.right-0 { right: 0; }
.bottom-0 { bottom: 0; }

/* ===== 溢出 ===== */
.overflow-hidden { overflow: hidden; }

/* ===== 通用卡片 ===== */
.card {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
}

/* ===== 通用按钮 ===== */
.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 9999rpx;
  font-size: 28rpx;
  font-weight: 600;
  padding: 20rpx 0;
  width: 100%;
  border: none;
}
.btn::after { border: none; }
.btn-primary { background-color: #3B82F6; color: #ffffff; }
.btn-cta { background-color: #F97316; color: #ffffff; }
.btn-rose { background-color: #F43F5E; color: #ffffff; }
.btn-outline {
  background-color: transparent;
  border: 2rpx solid #3B82F6;
  color: #3B82F6;
}
.btn-sm {
  font-size: 24rpx;
  padding: 12rpx 24rpx;
  width: auto;
  border-radius: 8rpx;
}
.btn-green { background-color: #10B981; color: #ffffff; }
.btn-fresh { background-color: #10B981; color: #ffffff; }
.btn-blue { background-color: #3B82F6; color: #ffffff; }

/* ===== 标签 ===== */
.tag {
  display: inline-flex;
  align-items: center;
  font-size: 20rpx;
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
}
.tag-blue { background-color: #EFF6FF; color: #3B82F6; }
.tag-green { background-color: #ECFDF5; color: #10B981; }
.tag-orange { background-color: #FFF7ED; color: #F97316; }
.tag-rose { background-color: #FFF1F2; color: #F43F5E; }
.tag-amber { background-color: #FFFBEB; color: #F59E0B; }

/* ===== 头像 ===== */
.avatar-sm { width: 56rpx; height: 56rpx; border-radius: 50%; }
.avatar-md { width: 80rpx; height: 80rpx; border-radius: 50%; }
.avatar-lg { width: 120rpx; height: 120rpx; border-radius: 50%; }

/* ===== 分割线 ===== */
.divider {
  height: 1rpx;
  background-color: #F1F5F9;
  margin: 24rpx 0;
}

/* ===== 安全区域 ===== */
.safe-bottom { padding-bottom: env(safe-area-inset-bottom); }
