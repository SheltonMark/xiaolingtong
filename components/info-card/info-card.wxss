.info-card {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}
.card-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.header-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}
.avatar-circle {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}
.avatar-text {
  font-size: 28rpx;
  font-weight: 600;
}
.header-info {
  display: flex;
  flex-direction: column;
}
.header-title {
  font-size: 26rpx;
  font-weight: 500;
  color: #1E293B;
}
.header-sub {
  font-size: 20rpx;
  color: #94A3B8;
  margin-top: 4rpx;
}
.header-btns {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex-shrink: 0;
}
.contact-btn {
  font-size: 22rpx;
  color: #ffffff;
  padding: 8rpx 20rpx;
  border-radius: 8rpx;
}
.btn-wechat { background-color: #10B981; }
.btn-phone { background-color: #3B82F6; }

/* 字段区域 */
.card-fields {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-bottom: 24rpx;
  padding-left: 100rpx;
}
.field-row {
  display: flex;
  font-size: 24rpx;
}
.field-label {
  color: #64748B;
  width: 80rpx;
  flex-shrink: 0;
  font-weight: 600;
}
.field-value {
  color: #1E293B;
}

/* 描述文字 */
.card-desc {
  padding-left: 100rpx;
  margin-bottom: 24rpx;
}
.desc-text {
  font-size: 24rpx;
  color: #64748B;
  line-height: 1.625;
}

/* 图片网格 */
.card-images {
  display: flex;
  gap: 8rpx;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
  position: relative;
}
.card-img-wrap {
  flex: 1;
}
.card-img {
  width: 100%;
  height: 200rpx;
}
.img-date {
  position: absolute;
  bottom: 8rpx;
  left: 8rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #ffffff;
  font-size: 18rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  z-index: 1;
}

/* 底部操作 */
.card-footer {
  display: flex;
  justify-content: flex-end;
}
.footer-actions {
  display: flex;
  align-items: center;
  gap: 24rpx;
}
.footer-action {
  display: flex;
  align-items: center;
  gap: 6rpx;
}
.action-icon {
  font-size: 24rpx;
  color: #94A3B8;
}
.action-text {
  font-size: 22rpx;
  color: #94A3B8;
}
