@import '/iconfont/iconfont.wxss';

.info-card {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}
/* 顶部联系按钮栏 */
.card-contact-bar {
  display: flex;
  gap: 12rpx;
  margin-bottom: 20rpx;
}
.contact-btn {
  flex: 1;
  font-size: 22rpx;
  color: #ffffff;
  padding: 12rpx 0;
  border-radius: 8rpx;
  text-align: center;
}
.btn-wechat { background-color: #10B981; }
.btn-phone { background-color: #3B82F6; }
.btn-chat { background-color: #F97316; }

/* 帖子内容 */
.card-content {
  font-size: 24rpx;
  color: #1E293B;
  line-height: 1.7;
  display: block;
  margin-bottom: 24rpx;
}

/* 图片网格 */
.card-images {
  display: flex;
  gap: 8rpx;
  margin-bottom: 16rpx;
}
.card-img-wrap {
  flex: 1;
}
.card-img {
  width: 100%;
  height: 200rpx;
  border-radius: 12rpx;
}

/* 底部操作 */
.card-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.footer-date {
  font-size: 20rpx;
  color: #94A3B8;
}
.footer-actions {
  display: flex;
  align-items: center;
  gap: 24rpx;
}
.footer-action {
  display: flex;
  align-items: center;
  gap: 6rpx;
}
.action-icon {
  font-size: 26rpx;
  color: #94A3B8;
  vertical-align: middle;
  margin-top: 4rpx;
}
.action-icon.icon-fenxiang1 {
  font-size: 22rpx;
  margin-top: 0;
}
.action-text {
  font-size: 20rpx;
  color: #94A3B8;
}
