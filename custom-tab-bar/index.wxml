<!-- 企业端 TabBar -->
<view class="tab-bar safe-bottom" wx:if="{{userRole === 'enterprise'}}">
  <!-- 首页 -->
  <view class="tab-bar-item" data-path="/pages/index/index" data-istab="{{true}}" data-index="0" bindtap="switchTab">
    <text class="tab-icon iconfont icon-shouye {{selected === 0 ? 'tab-icon-ent-active' : ''}}"></text>
    <text class="tab-text {{selected === 0 ? 'tab-text-ent-active' : ''}}">首页</text>
  </view>
  <!-- 曝光 -->
  <view class="tab-bar-item" data-path="/pages/exposure-board/exposure-board" data-istab="{{true}}" data-index="1" bindtap="switchTab">
    <text class="tab-icon iconfont icon-puguang {{selected === 1 ? 'tab-icon-ent-active' : ''}}"></text>
    <text class="tab-text {{selected === 1 ? 'tab-text-ent-active' : ''}}">曝光</text>
  </view>
  <!-- 发布（凸起按钮） -->
  <view class="tab-bar-item" data-path="/pages/publish/publish" data-istab="{{true}}" data-index="2" bindtap="switchTab">
    <view class="publish-btn">
      <text class="publish-icon">+</text>
    </view>
    <text class="tab-text tab-text-publish">发布</text>
  </view>
  <!-- 消息 -->
  <view class="tab-bar-item" data-path="/pages/messages/messages" data-istab="{{true}}" data-index="3" bindtap="switchTab">
    <text class="tab-icon iconfont icon-xiaoxi {{selected === 3 ? 'tab-icon-ent-active' : ''}}"></text>
    <text class="tab-text {{selected === 3 ? 'tab-text-ent-active' : ''}}">消息</text>
  </view>
  <!-- 我的 -->
  <view class="tab-bar-item" data-path="/pages/mine/mine" data-istab="{{true}}" data-index="4" bindtap="switchTab">
    <text class="tab-icon iconfont icon-wode {{selected === 4 ? 'tab-icon-ent-active' : ''}}"></text>
    <text class="tab-text {{selected === 4 ? 'tab-text-ent-active' : ''}}">我的</text>
  </view>
</view>

