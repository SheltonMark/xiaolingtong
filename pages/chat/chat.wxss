.chat-page { 
  display: flex; 
  flex-direction: column; 
  height: 100vh; 
  background-color: #F8FAFC; 
  /* 新增：限制页面最大宽度为屏幕宽度，防止溢出 */
  max-width: 100vw;
  overflow: hidden;
}
.chat-body { 
  flex: 1; 
  padding: 24rpx; 
  overflow-y: auto; 
  overflow-x: hidden; 
  /* 新增：关键约束 - 滚动容器宽度=屏幕宽度-左右内边距 */
  width: calc(100vw - 48rpx);
  box-sizing: border-box;
}
.time-mark { text-align: center; margin-bottom: 24rpx; }
.time-mark text { font-size: 20rpx; color: #94A3B8; }
.sys-tip { display: flex; justify-content: center; margin-bottom: 24rpx; }
.sys-tip-text { font-size: 20rpx; color: #94A3B8; background-color: #F1F5F9; padding: 8rpx 24rpx; border-radius: 9999rpx; }

/* 消息行 - 核心修改 */
.msg-row {
  display: flex; 
  align-items: flex-start; 
  gap: 16rpx;
  margin-bottom: 28rpx;
  /* 强制行宽100%，且不允许内容溢出 */
  width: 100%;
  box-sizing: border-box;
  /* 关键：防止子元素撑出父容器 */
  overflow: hidden;
}
.msg-left { flex-direction: row; }
.msg-right { 
  flex-direction: row; 
  justify-content: flex-end; 
  /* 兜底：右对齐但不超出 */
  padding-right: 0;
}
/* 头像容器 - 固定尺寸+不伸缩 */
.msg-avatar-wrap { 
  width: 64rpx; 
  height: 64rpx; 
  flex: 0 0 64rpx; 
  box-sizing: border-box;
  /* 新增：防止头像本身溢出 */
  overflow: hidden;
  border-radius: 50%;
}
/* 气泡容器 - 核心约束最大宽度 */
.msg-bubble-wrap {
  display: flex; 
  flex-direction: column; 
  min-width: 0;
  /* 调整：最大宽度适配屏幕（减去头像+间距） */
  max-width: calc(100% - 80rpx); 
  overflow: hidden;
}
.msg-bubble-right { align-items: flex-end; }
.bubble { 
  padding: 16rpx 24rpx; 
  font-size: 26rpx; 
  line-height: 1.6; 
  word-wrap: break-word; 
  overflow-wrap: break-word;
  /* 新增：气泡不超出容器 */
  max-width: 100%;
}
.bubble-left { background-color: #fff; border-radius: 24rpx 24rpx 24rpx 4rpx; color: #1E293B; box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04); }
.bubble-right { background-color: #3B82F6; border-radius: 24rpx 24rpx 4rpx 24rpx; color: #fff; }
.msg-image { width: 300rpx; border-radius: 16rpx; margin-top: 12rpx; max-width: 100%; }
.msg-time-text { font-size: 20rpx; color: #94A3B8; margin-top: 8rpx; }
.msg-time-right { text-align: right; }

/* 底部输入 */
.chat-bottom { 
  background-color: #fff; 
  border-top: 1rpx solid #F1F5F9; 
  padding: 16rpx 24rpx; 
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  /* 新增：底部栏不溢出 */
  width: 100vw;
  box-sizing: border-box;
}
.chat-input-row { display: flex; align-items: center; gap: 16rpx; }
.chat-tool-btn { font-size: 36rpx; flex-shrink: 0; }
.chat-input { 
  flex: 1; 
  background-color: #F1F5F9; 
  border-radius: 28rpx; 
  padding: 16rpx 24rpx; 
  font-size: 26rpx;
  /* 新增：输入框不溢出 */
  max-width: calc(100% - 120rpx);
}
.chat-send-btn { width: 56rpx; height: 56rpx; border-radius: 50%; background-color: #3B82F6; display: flex; align-items: center; justify-content: center; flex-shrink: 0; }
.send-arrow { color: #fff; font-size: 28rpx; font-weight: 700; }

/* 新增：文本头像样式（防止文字溢出） */
.text-avatar {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
}
.text-avatar-md {
  width: 64rpx;
  height: 64rpx;
}