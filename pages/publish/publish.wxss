.publish-page {
  min-height: 100vh;
  background-color: #F5F5F5;
  padding-bottom: 120rpx;
}

/* 类型选择 */
.type-tabs {
  display: flex;
  background-color: #ffffff;
  padding: 20rpx 24rpx;
  gap: 16rpx;
}
.type-tab {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 26rpx;
  color: #64748B;
  background-color: #F1F5F9;
  border-radius: 16rpx;
}
.type-active {
  background-color: #3B82F6;
  color: #ffffff;
  font-weight: 600;
}

/* 表单 */
.form-wrap {
  margin: 20rpx 24rpx 0;
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 8rpx 32rpx 32rpx;
}
.form-group {
  padding: 24rpx 0;
  border-bottom: 1rpx solid #F1F5F9;
}
.form-group:last-child {
  border-bottom: none;
}
.form-label {
  font-size: 26rpx;
  font-weight: 500;
  color: #1E293B;
  margin-bottom: 16rpx;
  display: block;
}
.required::before {
  content: '*';
  color: #F43F5E;
  margin-right: 4rpx;
}
.form-input {
  width: 100%;
  height: 72rpx;
  background-color: #F8FAFC;
  border: 1rpx solid #E2E8F0;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 26rpx;
  color: #1E293B;
  box-sizing: border-box;
}
.form-textarea {
  width: 100%;
  height: 160rpx;
  background-color: #F8FAFC;
  border: 1rpx solid #E2E8F0;
  border-radius: 12rpx;
  padding: 16rpx 24rpx;
  font-size: 26rpx;
  color: #1E293B;
  box-sizing: border-box;
}
.form-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 72rpx;
  background-color: #F8FAFC;
  border: 1rpx solid #E2E8F0;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 26rpx;
  color: #1E293B;
}
.placeholder { color: #94A3B8; }
.picker-arrow { font-size: 32rpx; color: #94A3B8; }

/* 图片上传 */
.image-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 16rpx;
}
.image-item {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  overflow: hidden;
  position: relative;
}
.upload-img {
  width: 100%;
  height: 100%;
}
.image-delete {
  position: absolute;
  top: 4rpx;
  right: 4rpx;
  width: 36rpx;
  height: 36rpx;
  background-color: rgba(0,0,0,0.5);
  color: #ffffff;
  font-size: 24rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.image-add {
  width: 160rpx;
  height: 160rpx;
  border: 2rpx dashed #CBD5E1;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}
.add-icon { font-size: 40rpx; color: #94A3B8; }
.add-text { font-size: 20rpx; color: #94A3B8; }

/* 分割线 */
.divider {
  height: 1rpx;
  background-color: #E2E8F0;
  margin: 16rpx 0;
}

/* 提交按钮 */
.submit-wrap {
  padding: 24rpx 48rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #ffffff;
  box-shadow: 0 -4rpx 12rpx rgba(0,0,0,0.04);
}
