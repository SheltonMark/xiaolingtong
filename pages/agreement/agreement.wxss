.doc-page { min-height: 100vh; background-color: #F8FAFC; }
.doc-card { background-color: #fff; border-radius: 24rpx; margin: 24rpx 32rpx; padding: 32rpx; }
.doc-main-title { font-size: 30rpx; font-weight: 700; color: #1E293B; display: block; text-align: center; margin-bottom: 8rpx; }
.doc-update { font-size: 20rpx; color: #94A3B8; display: block; text-align: center; margin-bottom: 32rpx; }
.doc-section { margin-bottom: 32rpx; }
.doc-section:last-child { margin-bottom: 0; }
.doc-title { font-size: 26rpx; font-weight: 600; color: #1E293B; display: block; margin-bottom: 12rpx; }
.doc-text { font-size: 24rpx; color: #64748B; line-height: 1.8; display: block; margin-bottom: 8rpx; }
