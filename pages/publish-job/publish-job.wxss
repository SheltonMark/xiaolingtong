.pj-page {
  min-height: 100vh;
  background-color: #F5F5F5;
  padding-bottom: 140rpx;
}
.form-wrap {
  margin: 20rpx 24rpx 0;
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 8rpx 32rpx 32rpx;
}
.form-group { padding: 24rpx 0; border-bottom: 1rpx solid #F1F5F9; }
.form-group:last-child { border-bottom: none; }
.form-label { font-size: 26rpx; font-weight: 500; color: #1E293B; margin-bottom: 16rpx; display: block; }
.required::before { content: '*'; color: #F43F5E; margin-right: 4rpx; }
.form-input {
  width: 100%; height: 72rpx; background-color: #F8FAFC; border: 1rpx solid #E2E8F0;
  border-radius: 12rpx; padding: 0 24rpx; font-size: 26rpx; color: #1E293B; box-sizing: border-box;
}
.form-textarea {
  width: 100%; height: 160rpx; background-color: #F8FAFC; border: 1rpx solid #E2E8F0;
  border-radius: 12rpx; padding: 16rpx 24rpx; font-size: 26rpx; color: #1E293B; box-sizing: border-box;
}
.form-picker {
  display: flex; align-items: center; justify-content: space-between;
  height: 72rpx; background-color: #F8FAFC; border: 1rpx solid #E2E8F0;
  border-radius: 12rpx; padding: 0 24rpx; font-size: 26rpx; color: #1E293B;
}
.placeholder { color: #94A3B8; }
.picker-arrow { font-size: 32rpx; color: #94A3B8; }
.radio-row { display: flex; gap: 16rpx; }
.radio-item {
  flex: 1; text-align: center; padding: 16rpx 0; font-size: 26rpx;
  background-color: #F1F5F9; border-radius: 12rpx; color: #64748B;
}
.radio-active { background-color: #3B82F6; color: #ffffff; font-weight: 600; }
.input-with-unit { display: flex; align-items: center; gap: 12rpx; }
.input-unit { font-size: 24rpx; color: #64748B; flex-shrink: 0; }
.date-row { display: flex; align-items: center; gap: 12rpx; }
.date-sep { font-size: 24rpx; color: #94A3B8; }
.benefit-tags { display: flex; flex-wrap: wrap; gap: 16rpx; }
.b-tag {
  padding: 12rpx 28rpx; background-color: #F1F5F9; border-radius: 9999rpx;
  font-size: 24rpx; color: #64748B;
}
.b-tag-active { background-color: #ECFDF5; color: #10B981; font-weight: 500; }
.image-grid { display: flex; flex-wrap: wrap; gap: 16rpx; margin-top: 16rpx; }
.image-item { width: 160rpx; height: 160rpx; border-radius: 12rpx; overflow: hidden; position: relative; }
.upload-img { width: 100%; height: 100%; }
.image-delete {
  position: absolute; top: 4rpx; right: 4rpx; width: 36rpx; height: 36rpx;
  background-color: rgba(0,0,0,0.5); color: #ffffff; font-size: 24rpx;
  border-radius: 50%; display: flex; align-items: center; justify-content: center;
}
.image-add {
  width: 160rpx; height: 160rpx; border: 2rpx dashed #CBD5E1; border-radius: 12rpx;
  display: flex; flex-direction: column; align-items: center; justify-content: center; gap: 8rpx;
}
.add-icon { font-size: 40rpx; color: #94A3B8; }
.add-text { font-size: 20rpx; color: #94A3B8; }
.submit-wrap {
  padding: 24rpx 48rpx; position: fixed; bottom: 0; left: 0; right: 0;
  background-color: #ffffff; box-shadow: 0 -4rpx 12rpx rgba(0,0,0,0.04);
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
}
.submit-hint { display: block; text-align: center; font-size: 20rpx; color: #94A3B8; margin-top: 12rpx; }
