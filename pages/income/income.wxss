.inc-page { min-height: 100vh; background-color: #F5F5F5; }

/* 月度统计 */
.inc-month-card {
  margin: 24rpx 32rpx 0; background-color: #fff;
  border-radius: 24rpx; padding: 32rpx;
}
.month-nav {
  display: flex; align-items: center; gap: 16rpx; margin-bottom: 24rpx;
}
.month-arrow { font-size: 32rpx; color: #94A3B8; padding: 0 8rpx; }
.month-text { font-size: 28rpx; font-weight: 600; color: #1E293B; }
.month-stats { display: flex; text-align: center; }
.month-stat { flex: 1; display: flex; flex-direction: column; gap: 4rpx; }
.month-val { font-size: 36rpx; font-weight: 700; }
.month-label { font-size: 20rpx; color: #94A3B8; }

/* Tab */
.inc-tab-wrap {
  margin: 24rpx 32rpx 0; background-color: #fff;
  border-radius: 24rpx 24rpx 0 0;
  border-bottom: 1rpx solid #F1F5F9;
}
.inc-tabs { display: flex; }
.inc-tab {
  flex: 1; text-align: center; padding: 20rpx 0;
  font-size: 24rpx; color: #64748B; position: relative;
}
.inc-tab-active { color: #F97316; font-weight: 600; }
.inc-tab-active::after {
  content: ''; position: absolute; bottom: 0; left: 50%;
  transform: translateX(-50%); width: 48rpx; height: 4rpx;
  background-color: #F97316; border-radius: 4rpx;
}

/* 列表 */
.inc-list-wrap {
  margin: 0 32rpx; background-color: #fff;
  border-radius: 0 0 24rpx 24rpx; overflow: hidden;
}
.inc-date-header { padding: 20rpx 24rpx 8rpx; }
.inc-date { font-size: 20rpx; color: #94A3B8; font-weight: 500; }
.inc-item {
  display: flex; align-items: center; gap: 20rpx;
  padding: 20rpx 24rpx; border-bottom: 1rpx solid #F8FAFC;
}
.inc-item:last-child { border-bottom: none; }
.inc-icon-wrap {
  width: 72rpx; height: 72rpx; border-radius: 12rpx;
  display: flex; align-items: center; justify-content: center;
  flex-shrink: 0;
}
.inc-icon-green { background-color: #ECFDF5; }
.inc-icon-rose { background-color: #FFF1F2; }
.inc-icon { font-size: 28rpx; font-weight: 700; }
.inc-icon-green .inc-icon { color: #10B981; }
.inc-icon-rose .inc-icon { color: #F43F5E; }
.inc-info { flex: 1; display: flex; flex-direction: column; gap: 4rpx; }
.inc-name { font-size: 24rpx; font-weight: 500; color: #1E293B; }
.inc-desc { font-size: 20rpx; color: #94A3B8; }
.inc-detail { font-size: 20rpx; color: #94A3B8; }
.inc-amount { font-size: 28rpx; font-weight: 600; flex-shrink: 0; }
