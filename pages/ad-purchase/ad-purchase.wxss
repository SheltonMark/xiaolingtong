.ad-page { min-height: 100vh; background-color: #F5F5F5; padding-bottom: 40rpx; }
.ad-section {
  margin: 24rpx 32rpx 0; background-color: #fff;
  border-radius: 24rpx; padding: 32rpx;
}
.section-title { font-size: 28rpx; font-weight: 600; color: #1E293B; display: block; margin-bottom: 24rpx; }
.required::after { content: ' *'; color: #F43F5E; }

/* 广告位选择 */
.ad-options { display: flex; flex-direction: column; gap: 20rpx; }
.ad-option {
  padding: 24rpx; border: 2rpx solid #E2E8F0;
  border-radius: 24rpx; overflow: hidden;
}
.ad-option-active { border-color: #3B82F6; border-width: 4rpx; background-color: rgba(239,246,255,0.5); }
.ad-option-top { display: flex; align-items: center; justify-content: space-between; margin-bottom: 12rpx; }
.ad-option-left { display: flex; align-items: center; gap: 16rpx; }
.ad-radio {
  width: 40rpx; height: 40rpx; border: 4rpx solid #CBD5E1;
  border-radius: 50%; display: flex; align-items: center;
  justify-content: center; flex-shrink: 0;
}
.ad-radio-active { border-color: #3B82F6; }
.ad-radio-dot { width: 20rpx; height: 20rpx; background-color: #3B82F6; border-radius: 50%; }
.ad-option-name { font-size: 26rpx; font-weight: 500; color: #1E293B; }
.ad-option-price { font-size: 24rpx; font-weight: 700; color: #1E293B; }
.ad-preview {
  margin-left: 56rpx; background: linear-gradient(to right, #DBEAFE, #EFF6FF);
  border-radius: 12rpx; height: 128rpx;
  display: flex; align-items: center; justify-content: center;
  margin-bottom: 8rpx;
}
.ad-preview-text { font-size: 20rpx; color: #3B82F6; }
.ad-option-desc { font-size: 20rpx; color: #94A3B8; margin-left: 56rpx; }

/* 投放日期 */
.date-row { display: flex; gap: 24rpx; }
.date-col { flex: 1; }
.date-label { font-size: 20rpx; color: #94A3B8; display: block; margin-bottom: 8rpx; }
.date-picker {
  display: flex; align-items: center; justify-content: space-between;
  height: 72rpx; border: 2rpx solid #E2E8F0; border-radius: 16rpx;
  padding: 0 24rpx; font-size: 24rpx; color: #1E293B;
}
.date-icon { font-size: 24rpx; }
.date-summary {
  margin-top: 16rpx; background-color: #EFF6FF;
  border-radius: 12rpx; padding: 12rpx 20rpx;
}
.date-summary-text { font-size: 20rpx; color: #3B82F6; }

/* 广告素材 */
.ad-hint { font-size: 20rpx; color: #94A3B8; display: block; margin-bottom: 16rpx; }
.ad-upload {
  width: 100%; height: 256rpx;
  background-color: #F8FAFC; border: 4rpx dashed #CBD5E1;
  border-radius: 24rpx; display: flex; flex-direction: column;
  align-items: center; justify-content: center; gap: 12rpx;
}
.ad-upload-icon { font-size: 64rpx; }
.ad-upload-text { font-size: 24rpx; color: #94A3B8; }
.ad-uploaded { position: relative; border-radius: 24rpx; overflow: hidden; }
.ad-uploaded-img { width: 100%; height: 256rpx; }
.ad-uploaded-delete {
  position: absolute; top: 12rpx; right: 12rpx;
  width: 48rpx; height: 48rpx; background-color: rgba(0,0,0,0.5);
  color: #fff; font-size: 28rpx; border-radius: 50%;
  display: flex; align-items: center; justify-content: center;
}

/* 跳转链接 */
.link-options { display: flex; flex-direction: column; gap: 20rpx; }
.link-option { display: flex; align-items: center; gap: 24rpx; }
.link-text { font-size: 24rpx; color: #1E293B; }
.link-picker {
  margin-left: 64rpx; display: flex; align-items: center;
  justify-content: space-between; height: 72rpx;
  border: 2rpx solid #E2E8F0; border-radius: 16rpx;
  padding: 0 24rpx; font-size: 24rpx; color: #94A3B8;
}
.link-picker-arrow { font-size: 20rpx; color: #94A3B8; }

/* 费用汇总 */
.fee-list { display: flex; flex-direction: column; gap: 12rpx; }
.fee-row { display: flex; align-items: center; justify-content: space-between; }
.fee-label { font-size: 24rpx; color: #64748B; }
.fee-value { font-size: 24rpx; color: #1E293B; }
.fee-divider { height: 1rpx; background-color: #F1F5F9; margin: 8rpx 0; }
.fee-total .fee-label { font-weight: 600; color: #1E293B; }
.fee-total .fee-value { font-size: 36rpx; font-weight: 700; }

/* 底部 */
.ad-bottom-area { margin: 32rpx 32rpx 0; }
