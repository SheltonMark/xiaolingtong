<!--pages/cert-worker/cert-worker.wxml-->
<view class="cert-page">
  <!-- 认证提示 -->
  <view class="tip-banner tip-orange">
    <text class="tip-icon iconfont icon-tishixinxi"></text>
    <text class="tip-text">完成实名认证后，即可浏览招工信息并报名应聘。您的信息将严格保密。</text>
  </view>

  <!-- 步骤指示器 -->
  <view class="steps">
    <view class="step">
      <view class="step-circle step-active">1</view>
      <text class="step-label step-label-active">填写信息</text>
    </view>
    <view class="step-line"></view>
    <view class="step">
      <view class="step-circle">2</view>
      <text class="step-label">审核中</text>
    </view>
    <view class="step-line"></view>
    <view class="step">
      <view class="step-circle">3</view>
      <text class="step-label">认证完成</text>
    </view>
  </view>

  <!-- 表单 -->
  <view class="form-area">
    <view class="form-group">
      <text class="form-label">真实姓名 <text class="required">*</text></text>
      <input class="form-input" placeholder="请输入身份证上的姓名" data-field="name" bindinput="onInput" />
    </view>

    <view class="form-group">
      <text class="form-label">身份证号 <text class="required">*</text></text>
      <input class="form-input" placeholder="请输入18位身份证号码" data-field="idCard" bindinput="onInput" />
    </view>

    <view class="form-group">
      <text class="form-label">身份证照片 <text class="required">*</text></text>
      <view class="upload-grid">
        <view class="upload-area upload-half" bindtap="onUploadFront">
          <image wx:if="{{frontImage}}" src="{{frontImage}}" mode="aspectFill" class="upload-preview" />
          <view wx:else class="upload-placeholder">
            <text class="upload-icon">🖼</text>
            <text class="upload-hint-sm">人像面</text>
          </view>
        </view>
        <view class="upload-area upload-half" bindtap="onUploadBack">
          <image wx:if="{{backImage}}" src="{{backImage}}" mode="aspectFill" class="upload-preview" />
          <view wx:else class="upload-placeholder">
            <text class="upload-icon">🖼</text>
            <text class="upload-hint-sm">国徽面</text>
          </view>
        </view>
      </view>
    </view>

    <view class="form-group">
      <text class="form-label">手机号 <text class="required">*</text></text>
      <view class="phone-row">
        <input class="form-input phone-input" type="number" placeholder="请输入手机号" data-field="phone" bindinput="onInput" />
        <view class="sms-btn" bindtap="onGetCode">获取验证码</view>
      </view>
    </view>

    <view class="form-group">
      <text class="form-label">验证码 <text class="required">*</text></text>
      <input class="form-input" placeholder="请输入短信验证码" data-field="smsCode" bindinput="onInput" />
    </view>

    <view class="form-group">
      <text class="form-label">擅长工种 <text class="optional">(选填)</text></text>
      <view class="tag-list">
        <text class="skill-tag {{selectedSkills.indexOf(item) > -1 ? 'skill-tag-active' : ''}}"
              wx:for="{{skills}}" wx:key="*this" data-tag="{{item}}" bindtap="onSkillTap">{{item}}</text>
      </view>
    </view>

    <button class="submit-btn submit-orange" bindtap="onSubmit">提交认证</button>
    <text class="submit-hint">审核结果将在1-3个工作日内通知您</text>
  </view>
</view>
