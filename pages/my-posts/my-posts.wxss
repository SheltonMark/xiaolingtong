.my-posts-page {
  min-height: 100vh;
  background-color: #F5F5F5;
}
.tab-bar {
  display: flex;
  background-color: #ffffff;
  padding: 0 24rpx;
  border-bottom: 1rpx solid #F1F5F9;
}
.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 24rpx;
  color: #64748B;
  position: relative;
}
.tab-active {
  color: #3B82F6;
  font-weight: 600;
}
.tab-active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 48rpx;
  height: 4rpx;
  background-color: #3B82F6;
  border-radius: 4rpx;
}
.post-list {
  padding: 24rpx 32rpx;
}
.post-card {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}
.card-offline { opacity: 0.7; }
.post-top {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

/* 类型标签 */
.type-tag {
  font-size: 20rpx;
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
  font-weight: 500;
}
.type-blue { background-color: #EFF6FF; color: #3B82F6; }
.type-green { background-color: #ECFDF5; color: #10B981; }
.type-amber { background-color: #FFFBEB; color: #F59E0B; }
.type-orange { background-color: #FFF7ED; color: #F97316; }

/* 状态标签 */
.status-tag {
  display: flex;
  align-items: center;
  gap: 4rpx;
  font-size: 20rpx;
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
  font-weight: 500;
}
.status-icon { font-size: 20rpx; }
.status-bg-green { background-color: #ECFDF5; color: #10B981; }
.status-bg-amber { background-color: #FFFBEB; color: #F59E0B; }
.status-bg-rose { background-color: #FFF1F2; color: #F43F5E; }
.status-bg-gray { background-color: #F1F5F9; color: #94A3B8; }

.post-title {
  font-size: 26rpx;
  font-weight: 500;
  color: #1E293B;
  display: block;
  margin-bottom: 12rpx;
  line-height: 1.5;
}

/* 驳回原因 */
.reject-box {
  background-color: #FFF1F2;
  border-radius: 12rpx;
  padding: 12rpx 20rpx;
  margin-bottom: 12rpx;
}
.reject-text {
  font-size: 20rpx;
  color: #F43F5E;
}

.post-meta {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 20rpx;
}
.meta-item {
  font-size: 20rpx;
  color: #94A3B8;
}
.meta-views { margin-left: auto; }

/* 操作按钮 */
.post-actions {
  display: flex;
  gap: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #F1F5F9;
}
.act-btn {
  flex: 1;
  font-size: 22rpx;
  font-weight: 500;
  padding: 12rpx 0;
  border-radius: 12rpx;
  text-align: center;
  border: none;
  line-height: 1.4;
}
.act-btn::after { border: none; }
.act-blue { background-color: #EFF6FF; color: #3B82F6; }
.act-orange { background-color: #FFF7ED; color: #F97316; }
.act-rose { background-color: #FFF1F2; color: #F43F5E; }
