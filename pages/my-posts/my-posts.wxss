.my-posts-page {
  min-height: 100vh;
  background-color: #F5F5F5;
}
.tab-bar {
  display: flex;
  background-color: #ffffff;
  padding: 0 24rpx;
  border-bottom: 1rpx solid #F1F5F9;
}
.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 26rpx;
  color: #94A3B8;
  position: relative;
}
.tab-active {
  color: #3B82F6;
  font-weight: 600;
}
.tab-active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 48rpx;
  height: 4rpx;
  background-color: #3B82F6;
  border-radius: 4rpx;
}
.post-list {
  padding: 20rpx 24rpx;
}
.post-card {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
}
.post-top {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}
.post-status {
  font-size: 22rpx;
  font-weight: 500;
}
.status-published { color: #10B981; }
.status-reviewing { color: #F59E0B; }
.status-rejected { color: #F43F5E; }
.status-offline { color: #94A3B8; }
.post-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1E293B;
  display: block;
  margin-bottom: 12rpx;
}
.post-meta {
  display: flex;
  gap: 24rpx;
  margin-bottom: 16rpx;
}
.meta-item {
  font-size: 22rpx;
  color: #94A3B8;
}
.reject-reason {
  background-color: #FFF1F2;
  border-radius: 12rpx;
  padding: 16rpx;
  margin-bottom: 16rpx;
}
.reject-label {
  font-size: 22rpx;
  color: #F43F5E;
  font-weight: 500;
}
.reject-text {
  font-size: 22rpx;
  color: #F43F5E;
}
.post-actions {
  display: flex;
  justify-content: flex-end;
  gap: 24rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #F1F5F9;
}
.action-btn {
  font-size: 24rpx;
  color: #3B82F6;
  padding: 8rpx 24rpx;
}
.action-delete {
  color: #F43F5E;
}
