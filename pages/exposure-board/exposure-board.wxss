.eb-page { min-height: 100vh; background-color: #F5F5F5; padding-bottom: calc(180rpx + env(safe-area-inset-bottom)); }

/* 警告横幅 */
.eb-warning {
  margin: 24rpx 32rpx 0; background-color: #FFF1F2;
  border-radius: 24rpx; padding: 24rpx;
  display: flex; gap: 16rpx; align-items: flex-start;
}
.eb-warning-icon { font-size: 28rpx; flex-shrink: 0; margin-top: 2rpx; }
.eb-warning-text { font-size: 20rpx; color: #F43F5E; line-height: 1.6; }

/* Tab */
.eb-tab-wrap {
  margin: 24rpx 32rpx 0; background-color: #fff;
  border-radius: 24rpx 24rpx 0 0;
  border-bottom: 1rpx solid #F1F5F9;
}
.eb-tabs { display: flex; }
.eb-tab {
  flex: 1; text-align: center; padding: 20rpx 0;
  font-size: 24rpx; color: #64748B; position: relative;
}
.eb-tab-active { color: #F43F5E; font-weight: 600; }
.eb-tab-active::after {
  content: ''; position: absolute; bottom: 0; left: 50%;
  transform: translateX(-50%); width: 48rpx; height: 4rpx;
  background-color: #F43F5E; border-radius: 4rpx;
}

/* 列表 */
.eb-list-wrap {
  margin: 0 32rpx; background-color: #fff;
  border-radius: 0 0 24rpx 24rpx; overflow: hidden;
}
.eb-card {
  padding: 32rpx 24rpx; border-bottom: 1rpx solid #F8FAFC;
}
.eb-card:last-child { border-bottom: none; }

/* 头部 */
.eb-card-header { display: flex; gap: 20rpx; margin-bottom: 16rpx; }
.eb-avatar-wrap {
  width: 80rpx; height: 80rpx; background-color: #FEE2E2;
  border-radius: 50%; display: flex; align-items: center;
  justify-content: center; flex-shrink: 0;
}
.eb-avatar-icon { font-size: 36rpx; }
.eb-card-info { flex: 1; }
.eb-name-row { display: flex; align-items: center; gap: 12rpx; margin-bottom: 8rpx; }
.eb-poster { font-size: 26rpx; font-weight: 500; color: #1E293B; }
.eb-date { font-size: 20rpx; color: #94A3B8; }
.eb-type-badge {
  font-size: 18rpx; color: #fff; background-color: #F43F5E;
  padding: 4rpx 16rpx; border-radius: 6rpx;
  display: inline-block;
}

/* 详情 */
.eb-detail {
  display: flex; flex-direction: column; gap: 8rpx;
  margin-bottom: 16rpx; padding-left: 100rpx;
}
.eb-detail-row { display: flex; }
.eb-dl { width: 120rpx; font-size: 24rpx; color: #64748B; font-weight: 600; flex-shrink: 0; }
.eb-dv { font-size: 24rpx; color: #1E293B; }

/* 描述 */
.eb-desc {
  font-size: 24rpx; color: #64748B; line-height: 1.6;
  display: block; margin-bottom: 16rpx; padding-left: 100rpx;
}

/* 图片 */
.eb-images {
  display: flex; gap: 8rpx; margin-bottom: 16rpx;
  padding-left: 100rpx;
}
.eb-img { width: 160rpx; height: 160rpx; border-radius: 12rpx; }

/* 操作 */
.eb-actions {
  display: flex; align-items: center; justify-content: flex-end; gap: 32rpx;
  padding-left: 100rpx;
}
.eb-action { font-size: 20rpx; color: #94A3B8; line-height: 1; display: inline-flex; align-items: center; gap: 6rpx; }
.eb-action .iconfont { font-size: 26rpx; line-height: 1; }
.eb-action .icon-pinglun { margin-top: 4rpx; }

/* 悬浮按钮 */
.eb-fab {
  position: fixed; bottom: calc(160rpx + env(safe-area-inset-bottom)); right: 32rpx;
  width: 96rpx; height: 96rpx; border-radius: 50%;
  background-color: #F43F5E; color: #fff;
  display: flex; align-items: center; justify-content: center;
  box-shadow: 0 8rpx 30rpx rgba(244,63,94,0.4);
  z-index: 50;
}
.eb-fab-icon { font-size: 48rpx; font-weight: 300; line-height: 1; }
