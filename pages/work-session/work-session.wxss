.ws-page { min-height: 100vh; background-color: #F5F5F5; padding-bottom: 40rpx; }

/* 状态卡片 */
.status-card {
  margin: 24rpx 32rpx 0; border-radius: 24rpx; padding: 32rpx;
  background: linear-gradient(to right, #3B82F6, #60A5FA); color: #fff;
}
.status-card-piece {
  background: linear-gradient(to right, #F97316, #FB923C);
}
.sc-top { display: flex; align-items: center; justify-content: space-between; margin-bottom: 16rpx; }
.sc-company { font-size: 24rpx; opacity: 0.8; }
.sc-badge { font-size: 20rpx; background-color: rgba(255,255,255,0.2); padding: 4rpx 16rpx; border-radius: 9999rpx; }
.sc-hours { display: flex; align-items: baseline; gap: 8rpx; margin-bottom: 8rpx; }
.sc-hours-big { font-size: 60rpx; font-weight: 700; }
.sc-hours-unit { font-size: 28rpx; opacity: 0.8; }
.sc-sub { font-size: 20rpx; opacity: 0.7; display: block; margin-bottom: 24rpx; }
.sc-stats {
  display: flex; background-color: rgba(255,255,255,0.15);
  border-radius: 16rpx; padding: 16rpx 20rpx; justify-content: space-between;
}
.sc-stat-val { font-size: 20rpx; }

/* 卡片 */
.ws-card { background-color: #fff; margin: 24rpx 32rpx 0; border-radius: 24rpx; padding: 32rpx; }
.card-title { font-size: 28rpx; font-weight: 600; color: #1E293B; }
.card-title .iconfont { margin-right: 8rpx; }
.card-header-row { margin-bottom: 20rpx; }

/* 拍照记录 */
.photo-list { display: flex; flex-direction: column; gap: 16rpx; }
.photo-item {
  display: flex; align-items: center; gap: 20rpx;
  padding: 16rpx 20rpx; border-radius: 16rpx;
}
.photo-done { background-color: #ECFDF5; }
.photo-pending { background-color: #FFFBEB; }
.photo-thumb-placeholder {
  width: 80rpx; height: 80rpx; border-radius: 12rpx;
  background-color: #FEF3C7; display: flex;
  align-items: center; justify-content: center; flex-shrink: 0;
  font-size: 36rpx; color: #F59E0B;
}
.photo-thumb-done { background-color: #D1FAE5; color: #10B981; }
.photo-info { flex: 1; display: flex; flex-direction: column; gap: 4rpx; }
.photo-time { font-size: 24rpx; font-weight: 500; color: #1E293B; }
.photo-status { font-size: 20rpx; }
.photo-check { font-size: 28rpx; }
.photo-btn {
  font-size: 20rpx; color: #fff; background-color: #3B82F6;
  padding: 8rpx 24rpx; border-radius: 12rpx; border: none; line-height: 1.4;
}
.photo-btn::after { border: none; }

/* 计件录入 */
.piece-list { display: flex; flex-direction: column; gap: 16rpx; }
.piece-item {
  display: flex; align-items: center; justify-content: space-between;
  padding: 16rpx 20rpx; background-color: #F8FAFC; border-radius: 16rpx;
}
.piece-worker { display: flex; align-items: center; gap: 16rpx; flex: 1; }
.piece-info { display: flex; flex-direction: column; gap: 4rpx; }
.piece-name { font-size: 24rpx; font-weight: 500; color: #1E293B; }
.piece-sub { font-size: 20rpx; color: #94A3B8; }
.piece-input {
  width: 120rpx; height: 56rpx; border: 2rpx solid #E2E8F0;
  border-radius: 12rpx; text-align: center; font-size: 24rpx;
  background-color: #fff;
}
.piece-submit-btn {
  width: 100%; font-size: 24rpx; color: #fff; background-color: #F97316;
  padding: 16rpx 0; border-radius: 12rpx; border: none; margin-top: 24rpx;
  font-weight: 500;
}
.piece-submit-btn::after { border: none; }

/* 异常记录 */
.anomaly-list { display: flex; flex-direction: column; gap: 16rpx; margin-bottom: 16rpx; }
.anomaly-item { padding: 16rpx 20rpx; background-color: #FFF1F2; border-radius: 12rpx; }
.anomaly-top { display: flex; align-items: center; justify-content: space-between; margin-bottom: 8rpx; }
.anomaly-name { font-size: 24rpx; font-weight: 500; color: #1E293B; }
.anomaly-time { font-size: 20rpx; color: #94A3B8; }
.anomaly-desc { font-size: 22rpx; color: #64748B; }
.record-anomaly-btn {
  width: 100%; font-size: 24rpx; color: #F43F5E;
  background-color: #FFF1F2; padding: 16rpx 0;
  border-radius: 12rpx; border: none; text-align: center; font-weight: 500;
}
.record-anomaly-btn::after { border: none; }

/* 底部 */
.ws-bottom {
  margin: 24rpx 32rpx; padding: 32rpx;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
}
.ws-hint { display: block; text-align: center; font-size: 20rpx; color: #94A3B8; margin-top: 12rpx; }
