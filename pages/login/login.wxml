<!--pages/login/login.wxml-->
<view class="login-page">
  <!-- Logo 区域 -->
  <view class="logo-area">
    <view class="logo-box">
      <text class="logo-icon">📡</text>
    </view>
    <text class="app-name">小灵通</text>
    <text class="app-slogan">工厂贸易供需对接平台</text>
    <text class="app-desc">打破供需信息壁垒，精准匹配工厂与贸易商</text>
  </view>

  <!-- 底部登录区域 -->
  <view class="login-bottom">
    <button class="wx-login-btn" bindtap="onWxLogin">
      <text class="wx-icon">💬</text>
      <text>微信一键登录</text>
    </button>
    <view class="terms">
      <text class="terms-text">登录即表示同意</text>
      <text class="terms-link" bindtap="onViewAgreement">《用户协议》</text>
      <text class="terms-text">和</text>
      <text class="terms-link" bindtap="onViewPrivacy">《隐私政策》</text>
    </view>
  </view>
</view>
