.login-page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #ffffff;
}
.logo-area {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.logo-box {
  width: 160rpx;
  height: 160rpx;
  background-color: #EFF6FF;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 32rpx;
}
.logo-icon {
  font-size: 80rpx;
}
.app-name {
  font-size: 44rpx;
  font-weight: 700;
  color: #1E293B;
  margin-bottom: 12rpx;
}
.app-slogan {
  font-size: 24rpx;
  color: #64748B;
  margin-bottom: 8rpx;
}
.app-desc {
  font-size: 20rpx;
  color: #94A3B8;
}
.login-bottom {
  padding: 0 48rpx 80rpx;
}
.wx-login-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  width: 100%;
  height: 96rpx;
  background-color: #22C55E;
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 24rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(34,197,94,0.3);
}
.wx-login-btn::after { border: none; }
.wx-icon {
  font-size: 36rpx;
}
.terms {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 24rpx;
  flex-wrap: wrap;
}
.terms-text {
  font-size: 20rpx;
  color: #94A3B8;
}
.terms-link {
  font-size: 20rpx;
  color: #3B82F6;
}
