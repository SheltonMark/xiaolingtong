.mine-page {
  min-height: 100vh;
  background-color: #F8FAFC;
  padding-bottom: 140rpx;
}

/* ===== 头部 ===== */
.header {
  padding: 0 32rpx 32rpx;
}
.header-enterprise {
  background: linear-gradient(180deg, #EFF6FF 0%, #F8FAFC 100%);
}
.header-worker {
  background: linear-gradient(180deg, #FFF7ED 0%, #F8FAFC 100%);
}
.header-top {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
  min-height: 64rpx;
  overflow: visible;
}
.header-label {
  font-size: 30rpx;
  font-weight: 600;
  color: #1E293B;
}
.settings-icon {
  font-size: 44rpx;
  color: #1E293B;
  font-weight: bold;
  padding: 8rpx;
  line-height: 1;
  min-width: 48rpx;
  min-height: 48rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  align-self: flex-start;
}

/* ===== 用户信息 ===== */
.user-info {
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
}
.avatar-img {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  flex-shrink: 0;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
}
.user-detail {
  flex: 1;
  min-width: 0;
  margin-top: 12rpx;
}
.user-name-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
}
.user-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #1E293B;
  line-height: 1.2;
}
.cert-badge {
  font-size: 20rpx;
  background-color: #10B981;
  color: #ffffff;
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
}
.user-sub {
  font-size: 24rpx;
  color: #64748B;
}

/* ===== 数据卡片 ===== */
.data-card {
  margin-top: 32rpx;
  background-color: #ffffff;
  border-radius: 32rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.04);
}
.user-avatar-img {
  width: 96rpx; height: 96rpx; border-radius: 50%; flex-shrink: 0;
}
.data-card-3 .data-item {
  flex: 1;
}
.data-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}
.data-value {
  font-size: 40rpx;
  font-weight: 700;
}
.data-value-sm {
  font-size: 24rpx;
  font-weight: 600;
  margin-top: 12rpx;
}
.data-label {
  font-size: 22rpx;
  color: #64748B;
}
.data-divider {
  width: 1rpx;
  height: 60rpx;
  background-color: #F1F5F9;
}

/* ===== 功能入口 ===== */
.func-grid {
  margin: 24rpx 24rpx 0;
  background-color: #ffffff;
  border-radius: 32rpx;
  padding: 32rpx 16rpx;
  display: flex;
  flex-wrap: wrap;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.04);
}
.func-item {
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
}
.func-icon {
  width: 88rpx;
  height: 88rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.func-emoji {
  font-family: "iconfont" !important;
  font-size: 40rpx;
  color: #64748B;
}
.func-label {
  font-size: 20rpx;
  color: #64748B;
}

/* ===== Tab 区域 ===== */
.tab-section {
  margin: 24rpx 24rpx 0;
  background-color: #ffffff;
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.04);
}
.tab-bar-mine {
  display: flex;
  border-bottom: 1rpx solid #F1F5F9;
}
.tab-item-mine {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 26rpx;
  color: #64748B;
  position: relative;
}
.tab-active-ent {
  color: #F97316;
  font-weight: 600;
}
.tab-active-ent::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 48rpx;
  height: 4rpx;
  background-color: #F97316;
  border-radius: 4rpx;
}
.tab-active-worker {
  color: #3B82F6;
  font-weight: 600;
}
.tab-active-worker::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 48rpx;
  height: 4rpx;
  background-color: #3B82F6;
  border-radius: 4rpx;
}

/* 我的动态卡片 */
.dynamic-card {
  padding: 24rpx 24rpx; border-bottom: 1rpx solid #F1F5F9;
}
.dynamic-card:last-child { border-bottom: none; }
.dynamic-top {
  display: flex; align-items: center; justify-content: space-between; margin-bottom: 8rpx;
}
.dynamic-type {
  font-size: 20rpx; padding: 2rpx 12rpx; border-radius: 6rpx; font-weight: 500;
}
.type-blue { color: #3B82F6; background-color: #EFF6FF; }
.type-orange { color: #F97316; background-color: #FFF7ED; }
.type-green { color: #10B981; background-color: #ECFDF5; }
.type-amber { color: #F59E0B; background-color: #FFFBEB; }
.dynamic-date { font-size: 20rpx; color: #94A3B8; }
.dynamic-title { font-size: 26rpx; color: #1E293B; font-weight: 500; display: block; margin-bottom: 8rpx; }
.dynamic-meta { display: flex; align-items: center; justify-content: space-between; }
.dynamic-meta-text { font-size: 20rpx; color: #94A3B8; }
.dynamic-status { font-size: 20rpx; font-weight: 500; }
