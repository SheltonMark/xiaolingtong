.rate-page { min-height: 100vh; background-color: #F8FAFC; padding-bottom: 200rpx; }
.rate-card { background-color: #fff; border-radius: 24rpx; padding: 32rpx; margin: 24rpx 32rpx 0; }
.company-row { display: flex; align-items: center; gap: 20rpx; }
.company-info { display: flex; flex-direction: column; }
.company-name { font-size: 28rpx; font-weight: 600; color: #1E293B; }
.company-sub { font-size: 22rpx; color: #94A3B8; margin-top: 4rpx; }
.card-title { font-size: 28rpx; font-weight: 600; color: #1E293B; display: block; margin-bottom: 28rpx; }
.rate-item { display: flex; align-items: center; justify-content: space-between; margin-bottom: 28rpx; }
.rate-item:last-child { margin-bottom: 0; }
.rate-label { font-size: 24rpx; color: #64748B; }
.stars { display: flex; gap: 12rpx; }
.star { font-size: 40rpx; }
.star-on { color: #F59E0B; }
.star-off { color: #E2E8F0; }
.tag-wrap { display: flex; flex-wrap: wrap; gap: 16rpx; }
.tag-item { font-size: 22rpx; padding: 10rpx 24rpx; border-radius: 9999rpx; background-color: #F8FAFC; color: #64748B; border: 1rpx solid #E2E8F0; }
.tag-selected { background-color: #EFF6FF; color: #3B82F6; border-color: #3B82F6; }
.rate-textarea { width: 100%; min-height: 160rpx; background-color: #F8FAFC; border-radius: 16rpx; padding: 20rpx; font-size: 24rpx; color: #1E293B; box-sizing: border-box; }
.char-count { font-size: 20rpx; color: #94A3B8; display: block; text-align: right; margin-top: 8rpx; }
.rate-bottom { position: fixed; bottom: 0; left: 0; right: 0; background-color: #fff; padding: 20rpx 48rpx; padding-bottom: calc(20rpx + env(safe-area-inset-bottom)); box-shadow: 0 -4rpx 12rpx rgba(0,0,0,0.04); }
.rate-hint { display: block; text-align: center; font-size: 20rpx; color: #94A3B8; margin-top: 12rpx; }
