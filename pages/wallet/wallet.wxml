<!--pages/wallet/wallet.wxml-->
<view class="wl-page">
  <!-- 余额卡片 -->
  <view class="wl-card">
    <view class="wl-card-bg1"></view>
    <view class="wl-card-bg2"></view>
    <text class="wl-label">可提现余额</text>
    <view class="wl-amount-row">
      <text class="wl-yen">¥</text>
      <text class="wl-amount">{{balance}}</text>
    </view>
    <text class="wl-total">累计收入 ¥{{totalIncome}}</text>
    <view class="wl-btn-row">
      <button class="wl-btn wl-btn-primary" bindtap="onWithdraw">立即提现</button>
      <button class="wl-btn wl-btn-outline" bindtap="onWithdrawHistory">提现记录</button>
    </view>
  </view>

  <!-- 快捷入口 -->
  <view class="wl-shortcuts">
    <view class="shortcut-grid">
      <view class="shortcut-item" bindtap="onGoIncome">
        <view class="shortcut-icon shortcut-icon-orange">
          <text>💰</text>
        </view>
        <text class="shortcut-text">收入明细</text>
      </view>
      <view class="shortcut-item">
        <view class="shortcut-icon shortcut-icon-blue">
          <text>🏷</text>
        </view>
        <text class="shortcut-text">灵豆商城</text>
      </view>
      <view class="shortcut-item">
        <view class="shortcut-icon shortcut-icon-green">
          <text>📋</text>
        </view>
        <text class="shortcut-text">工资单</text>
      </view>
      <view class="shortcut-item">
        <view class="shortcut-icon shortcut-icon-amber">
          <text>❓</text>
        </view>
        <text class="shortcut-text">帮助</text>
      </view>
    </view>
  </view>

  <!-- 最近收入 -->
  <view class="wl-section">
    <view class="section-header">
      <text class="section-title">最近收入</text>
      <text class="section-action" bindtap="onGoIncome">查看全部</text>
    </view>
    <view class="income-list">
      <view class="income-item" wx:for="{{records}}" wx:key="id">
        <view class="income-icon-wrap {{item.type === 'income' ? 'income-icon-green' : 'income-icon-rose'}}">
          <text class="income-icon">{{item.type === 'income' ? '+' : '-'}}</text>
        </view>
        <view class="income-info">
          <text class="income-name">{{item.title}}</text>
          <text class="income-time">{{item.desc}}</text>
        </view>
        <text class="income-amount {{item.type === 'income' ? 'text-fresh' : 'text-rose'}}">{{item.amount}}</text>
      </view>
    </view>
  </view>

  <!-- 提现说明 -->
  <view class="wl-tip">
    <text class="wl-tip-text">提现到微信零钱 · 免手续费 · 预计24小时内到账</text>
  </view>
</view>
