<!--pages/wallet/wallet.wxml-->
<view class="wl-page">
  <view class="wl-card">
    <text class="wl-label">钱包余额（元）</text>
    <text class="wl-amount">{{balance}}</text>
    <button class="btn wl-btn" bindtap="onWithdraw">提现到微信</button>
  </view>
  <view class="record-section">
    <text class="record-title">收支记录</text>
    <view class="record-list">
      <view class="record-item" wx:for="{{records}}" wx:key="id">
        <view class="record-left">
          <text class="record-name">{{item.title}}</text>
          <text class="record-time">{{item.time}}</text>
        </view>
        <text class="record-amount {{item.type === 'income' ? 'amount-income' : 'amount-withdraw'}}">{{item.amount}}</text>
      </view>
    </view>
  </view>
</view>
