.wl-page { min-height: 100vh; background-color: #F5F5F5; }
.wl-card { margin: 20rpx 24rpx 0; background: linear-gradient(135deg, #F97316, #FB923C); border-radius: 24rpx; padding: 40rpx 32rpx; color: #fff; }
.wl-label { font-size: 24rpx; opacity: 0.8; display: block; margin-bottom: 12rpx; }
.wl-amount { font-size: 56rpx; font-weight: 700; display: block; margin-bottom: 24rpx; }
.wl-btn { background-color: rgba(255,255,255,0.2) !important; color: #fff !important; border-radius: 9999rpx !important; font-size: 26rpx !important; }
.record-section { margin: 24rpx 24rpx 0; background-color: #fff; border-radius: 24rpx; padding: 32rpx; }
.record-title { font-size: 28rpx; font-weight: 600; color: #1E293B; display: block; margin-bottom: 20rpx; }
.record-list { display: flex; flex-direction: column; }
.record-item { display: flex; align-items: center; justify-content: space-between; padding: 20rpx 0; border-bottom: 1rpx solid #F1F5F9; }
.record-item:last-child { border-bottom: none; }
.record-left { display: flex; flex-direction: column; gap: 4rpx; }
.record-name { font-size: 26rpx; color: #1E293B; }
.record-time { font-size: 20rpx; color: #94A3B8; }
.record-amount { font-size: 28rpx; font-weight: 600; }
.amount-income { color: #10B981; }
.amount-withdraw { color: #1E293B; }
