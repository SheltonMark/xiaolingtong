.index-page {
  background-color: #F8FAFC;
  min-height: 100vh;
  padding-bottom: 140rpx;
}

/* ===== 固定顶部（整体一块） ===== */
.fixed-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 999;
  background-color: #ffffff;
}
.nav-bar-inner {
  display: flex;
  align-items: center;
  justify-content: center;
}
.nav-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1E293B;
}
.top-bar-inner {
  display: flex;
  align-items: center;
  padding: 16rpx 32rpx;
  gap: 16rpx;
}
.city-selector {
  display: flex;
  align-items: center;
  gap: 4rpx;
  flex-shrink: 0;
}
.city-icon {
  font-size: 28rpx;
}
.city-name {
  font-size: 24rpx;
  font-weight: 500;
  color: #1E293B;
}
.city-arrow {
  font-size: 20rpx;
  color: #94A3B8;
}
.search-bar {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 16rpx;
  background-color: #F1F5F9;
  border-radius: 9999rpx;
  padding: 12rpx 24rpx;
}
.search-icon {
  font-size: 28rpx;
  flex-shrink: 0;
}
.search-placeholder {
  font-size: 24rpx;
  color: #94A3B8;
}
.notify-btn {
  position: relative;
  flex-shrink: 0;
  padding: 8rpx;
}
.notify-icon {
  font-size: 36rpx;
}
.notify-badge {
  position: absolute;
  top: -4rpx;
  right: -4rpx;
  min-width: 32rpx;
  height: 32rpx;
  background-color: #F43F5E;
  color: #ffffff;
  font-size: 18rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* ===== Tab 栏 ===== */
.tab-bar-ent {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx;
}
.tab-item {
  flex: none;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 0 20rpx;
  position: relative;
}
.tab-text {
  font-size: 26rpx;
  font-weight: 500;
  color: #64748B;
  white-space: nowrap;
}
.tab-active .tab-text {
  color: #F97316;
  font-weight: 600;
}
.tab-line {
  position: absolute;
  bottom: 0;
  width: 48rpx;
  height: 4rpx;
  background-color: #F97316;
  border-radius: 4rpx;
}

/* ===== 筛选栏（临工端） ===== */
.filter-bar {
  display: flex;
  padding: 16rpx 32rpx;
  border-bottom: 1rpx solid #F1F5F9;
}
.filter-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 4rpx;
  padding: 8rpx 0;
}
.filter-text {
  font-size: 24rpx;
  color: #1E293B;
}
.filter-arrow {
  font-size: 24rpx;
  color: #94A3B8;
  line-height: 1;
  margin-top: 2rpx;
}

/* ===== Banner ===== */
.banner-wrap {
  padding: 24rpx 32rpx;
}
.banner-inner {
  border-radius: 24rpx;
  overflow: hidden;
}
.banner-img {
  width: 100%;
  height: 224rpx;
  display: block;
}

/* ===== 分类图标网格 ===== */
.cate-grid-wrap {
  padding: 16rpx 32rpx 0;
}
.cate-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx 0;
}
.cate-item {
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}
.cate-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.cate-icon-active {
  background-color: #3B82F6 !important;
}
.cate-icon-text {
  font-size: 36rpx;
}
.cate-icon-text-white {
  color: #ffffff !important;
}
.cate-label {
  font-size: 20rpx;
  color: #64748B;
}
.cate-label-active {
  color: #3B82F6;
  font-weight: 500;
}

/* ===== 列表区域 ===== */
.list-wrap {
  padding: 0 32rpx 32rpx;
}
.worker-list-wrap {
  padding: 0 32rpx 32rpx;
}
.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 0 16rpx;
}
.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1E293B;
}
.section-more {
  font-size: 24rpx;
  color: #3B82F6;
}

/* ===== 招工卡片 ===== */
.job-card {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}
.job-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 16rpx;
}
.job-header-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex: 1;
  min-width: 0;
}
.job-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  flex-shrink: 0;
}
.job-avatar-placeholder {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #F1F5F9;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  font-size: 36rpx;
}
.job-company-info {
  display: flex;
  flex-direction: column;
  min-width: 0;
}
.job-company {
  font-size: 26rpx;
  font-weight: 500;
  color: #1E293B;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.job-meta {
  font-size: 22rpx;
  color: #94A3B8;
  margin-top: 4rpx;
}
.contact-btns {
  display: flex;
  gap: 12rpx;
  flex-shrink: 0;
  margin-left: 16rpx;
}
.contact-btn {
  font-size: 22rpx;
  color: #ffffff;
  padding: 8rpx 20rpx;
  border-radius: 8rpx;
}
.btn-wechat { background-color: #10B981; }
.btn-phone { background-color: #3B82F6; }

/* 薪资行 */
.job-salary-line {
  font-size: 26rpx;
  color: #1E293B;
  line-height: 1.625;
  margin-bottom: 8rpx;
  display: block;
}
.job-desc {
  font-size: 26rpx;
  color: #64748B;
  line-height: 1.625;
  margin-bottom: 24rpx;
  display: block;
}

/* 招工卡片图片 */
.job-images {
  display: flex;
  gap: 8rpx;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
}
.job-img-wrap {
  flex: 1;
}
.job-img {
  width: 100%;
  height: 200rpx;
}

.job-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 16rpx;
}
.job-applied {
  font-size: 22rpx;
  color: #94A3B8;
}
.job-actions {
  display: flex;
  gap: 24rpx;
}
.job-action-item {
  display: flex;
  align-items: center;
  gap: 6rpx;
}
.action-icon {
  font-size: 24rpx;
  color: #94A3B8;
}
.job-action {
  font-size: 22rpx;
  color: #94A3B8;
}

/* ===== 工厂名录卡片 ===== */
.factory-card {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}
.factory-top {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 16rpx;
}
.factory-logo {
  width: 96rpx;
  height: 96rpx;
  border-radius: 16rpx;
  background-color: #F1F5F9;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  flex-shrink: 0;
}
.factory-logo-img {
  width: 96rpx;
  height: 96rpx;
  border-radius: 16rpx;
  flex-shrink: 0;
}
.factory-info {
  flex: 1;
  min-width: 0;
}
.factory-name {
  font-size: 26rpx;
  font-weight: 500;
  color: #1E293B;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.factory-sub {
  font-size: 22rpx;
  color: #94A3B8;
  margin-top: 8rpx;
  display: block;
}
.factory-tags {
  display: flex;
  align-items: center;
  gap: 12rpx;
}
.factory-tag {
  font-size: 20rpx;
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
}
.tag-blue {
  background-color: #EFF6FF;
  color: #3B82F6;
}
.factory-years {
  font-size: 20rpx;
  color: #CBD5E1;
  margin-left: auto;
}
