.rp-page { min-height: 100vh; background-color: #F5F5F5; padding-bottom: 140rpx; }
.form-wrap { margin: 20rpx 24rpx 0; background-color: #fff; border-radius: 24rpx; padding: 8rpx 32rpx 32rpx; }
.form-group { padding: 24rpx 0; border-bottom: 1rpx solid #F1F5F9; }
.form-group:last-child { border-bottom: none; }
.form-label { font-size: 26rpx; font-weight: 500; color: #1E293B; margin-bottom: 16rpx; display: block; }
.required::before { content: '*'; color: #F43F5E; margin-right: 4rpx; }
.form-textarea { width: 100%; height: 200rpx; background-color: #F8FAFC; border: 1rpx solid #E2E8F0; border-radius: 12rpx; padding: 16rpx 24rpx; font-size: 26rpx; color: #1E293B; box-sizing: border-box; }
.type-tags { display: flex; flex-wrap: wrap; gap: 16rpx; }
.t-tag { padding: 12rpx 28rpx; background-color: #F1F5F9; border-radius: 9999rpx; font-size: 24rpx; color: #64748B; }
.t-tag-active { background-color: #FFF1F2; color: #F43F5E; font-weight: 500; }
.image-grid { display: flex; flex-wrap: wrap; gap: 16rpx; margin-top: 16rpx; }
.image-item { width: 160rpx; height: 160rpx; border-radius: 12rpx; overflow: hidden; position: relative; }
.upload-img { width: 100%; height: 100%; }
.image-delete { position: absolute; top: 4rpx; right: 4rpx; width: 36rpx; height: 36rpx; background-color: rgba(0,0,0,0.5); color: #fff; font-size: 24rpx; border-radius: 50%; display: flex; align-items: center; justify-content: center; }
.image-add { width: 160rpx; height: 160rpx; border: 2rpx dashed #CBD5E1; border-radius: 12rpx; display: flex; align-items: center; justify-content: center; }
.add-icon { font-size: 40rpx; color: #94A3B8; }
.submit-wrap { padding: 24rpx 48rpx; position: fixed; bottom: 0; left: 0; right: 0; background-color: #fff; box-shadow: 0 -4rpx 12rpx rgba(0,0,0,0.04); }
