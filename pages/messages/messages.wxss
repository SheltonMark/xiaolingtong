.msg-page { min-height: 100vh; background-color: #F8FAFC; }
.msg-header { background-color: #fff; padding: 20rpx 32rpx; display: flex; align-items: center; justify-content: space-between; }
.msg-header-title { font-size: 28rpx; font-weight: 600; color: #1E293B; }
.msg-read-all { font-size: 20rpx; color: #3B82F6; }
.tab-bar { display: flex; background-color: #fff; border-bottom: 1rpx solid #F1F5F9; }
.tab-item { flex: 1; text-align: center; padding: 20rpx 0; font-size: 24rpx; color: #64748B; position: relative; }
.tab-active { color: #3B82F6; font-weight: 500; }
.tab-active::after { content: ''; position: absolute; bottom: 0; left: 50%; transform: translateX(-50%); width: 48rpx; height: 4rpx; background-color: #3B82F6; border-radius: 4rpx; }
.tab-text-wrap { display: inline-flex; align-items: flex-start; position: relative; }
.tab-badge { min-width: 24rpx; height: 24rpx; background-color: #F43F5E; color: #fff; font-size: 16rpx; font-weight: 700; border-radius: 9999rpx; display: inline-flex; align-items: center; justify-content: center; padding: 0 6rpx; margin-left: 4rpx; margin-top: -4rpx; }
.msg-list { padding: 24rpx 32rpx; display: flex; flex-direction: column; gap: 16rpx; }
.msg-card { background-color: #fff; border-radius: 20rpx; padding: 28rpx; display: flex; align-items: flex-start; gap: 20rpx; }
.msg-unread { border-left-width: 6rpx; border-left-style: solid; }
.msg-icon-wrap { width: 64rpx; height: 64rpx; border-radius: 12rpx; display: flex; align-items: center; justify-content: center; flex-shrink: 0; margin-top: 4rpx; }
.msg-icon-text { font-size: 28rpx; }
.msg-body { flex: 1; min-width: 0; }
.msg-top-row { display: flex; align-items: center; justify-content: space-between; margin-bottom: 8rpx; }
.msg-title { font-size: 24rpx; font-weight: 600; color: #1E293B; }
.msg-title-read { font-weight: 500; color: #64748B; }
.msg-time-wrap { display: flex; align-items: center; gap: 8rpx; flex-shrink: 0; }
.msg-time { font-size: 20rpx; color: #94A3B8; }
.unread-dot { width: 12rpx; height: 12rpx; border-radius: 50%; background-color: #F43F5E; }
.msg-desc { font-size: 22rpx; color: #64748B; line-height: 1.5; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; }
.msg-desc-read { color: #94A3B8; }
.chat-card { align-items: center; }
.chat-avatar-wrap { width: 72rpx; height: 72rpx; border-radius: 50%; background-color: #F1F5F9; display: flex; align-items: center; justify-content: center; flex-shrink: 0; position: relative; }
.chat-avatar-text { font-size: 32rpx; }
.chat-badge { position: absolute; top: -8rpx; right: -8rpx; min-width: 28rpx; height: 28rpx; background-color: #F43F5E; color: #fff; font-size: 18rpx; font-weight: 600; border-radius: 9999rpx; display: flex; align-items: center; justify-content: center; padding: 0 6rpx; }
