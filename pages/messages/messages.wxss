.msg-page { min-height: 100vh; background-color: #F5F5F5; }
.tab-bar { display: flex; background-color: #fff; border-bottom: 1rpx solid #F1F5F9; }
.tab-item { flex: 1; text-align: center; padding: 24rpx 0; font-size: 26rpx; color: #94A3B8; position: relative; }
.tab-active { color: #3B82F6; font-weight: 600; }
.tab-active::after { content: ''; position: absolute; bottom: 0; left: 50%; transform: translateX(-50%); width: 48rpx; height: 4rpx; background-color: #3B82F6; border-radius: 4rpx; }
.msg-list { padding: 20rpx 24rpx; }
.msg-item { display: flex; align-items: center; gap: 20rpx; background-color: #fff; border-radius: 20rpx; padding: 24rpx; margin-bottom: 16rpx; }
.msg-icon { width: 72rpx; height: 72rpx; border-radius: 50%; background-color: #F1F5F9; display: flex; align-items: center; justify-content: center; font-size: 32rpx; flex-shrink: 0; }
.msg-content { flex: 1; min-width: 0; }
.msg-title-row { display: flex; align-items: center; justify-content: space-between; margin-bottom: 8rpx; }
.msg-title { font-size: 26rpx; font-weight: 500; color: #1E293B; }
.msg-time { font-size: 20rpx; color: #94A3B8; }
.msg-desc { font-size: 22rpx; color: #64748B; overflow: hidden; text-overflow: ellipsis; white-space: nowrap; display: block; }
.unread-dot { width: 12rpx; height: 12rpx; border-radius: 50%; background-color: #F43F5E; flex-shrink: 0; }
