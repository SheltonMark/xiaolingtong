.exp-page { min-height: 100vh; background-color: #F5F5F5; padding-bottom: 40rpx; }
.form-card {
  margin: 24rpx 32rpx 0; background-color: #fff;
  border-radius: 24rpx; padding: 24rpx;
}
.form-label {
  font-size: 24rpx; font-weight: 500; color: #1E293B;
  margin-bottom: 12rpx; display: block;
}
.required::before { content: '*'; color: #F43F5E; margin-right: 4rpx; }
.label-hint { font-weight: 400; color: #94A3B8; }
.form-input {
  width: 100%; height: 72rpx;
  background-color: #F8FAFC; border: 2rpx solid #E2E8F0;
  border-radius: 16rpx; padding: 0 24rpx;
  font-size: 24rpx; color: #1E293B; box-sizing: border-box;
}
.form-textarea {
  width: 100%; height: 224rpx;
  background-color: #F8FAFC; border: 2rpx solid #E2E8F0;
  border-radius: 16rpx; padding: 16rpx 24rpx;
  font-size: 24rpx; color: #1E293B; box-sizing: border-box;
}
.input-with-prefix {
  display: flex; align-items: center;
  background-color: #F8FAFC; border: 2rpx solid #E2E8F0;
  border-radius: 16rpx; overflow: hidden;
}
.input-prefix {
  font-size: 24rpx; color: #64748B; padding: 0 24rpx;
  background-color: #F1F5F9; height: 72rpx; line-height: 72rpx;
  border-right: 2rpx solid #E2E8F0; flex-shrink: 0;
}

/* 图片 */
.image-grid { display: flex; flex-wrap: wrap; gap: 16rpx; margin-top: 12rpx; }
.image-item {
  width: 128rpx; height: 128rpx; border-radius: 16rpx;
  overflow: hidden; position: relative;
}
.upload-img { width: 100%; height: 100%; }
.image-delete {
  position: absolute; top: 4rpx; right: 4rpx;
  width: 32rpx; height: 32rpx; background-color: rgba(0,0,0,0.5);
  color: #fff; font-size: 20rpx; border-radius: 50%;
  display: flex; align-items: center; justify-content: center;
}
.image-add {
  width: 128rpx; height: 128rpx;
  border: 4rpx dashed #CBD5E1; border-radius: 16rpx;
  display: flex; flex-direction: column; align-items: center;
  justify-content: center; gap: 4rpx;
}
.add-icon { font-size: 40rpx; color: #CBD5E1; }
.add-text { font-size: 18rpx; color: #94A3B8; }

/* 协议 */
.agree-row {
  margin: 24rpx 32rpx 0; display: flex; gap: 16rpx;
  align-items: flex-start;
}
.agree-check {
  width: 32rpx; height: 32rpx; border: 4rpx solid #CBD5E1;
  border-radius: 8rpx; flex-shrink: 0; margin-top: 4rpx;
  display: flex; align-items: center; justify-content: center;
}
.agree-checked { background-color: #3B82F6; border-color: #3B82F6; }
.agree-tick { color: #fff; font-size: 20rpx; font-weight: 700; }
.agree-text { font-size: 20rpx; color: #64748B; line-height: 1.6; }

/* 提交 */
.submit-area { margin: 24rpx 32rpx 0; }
.submit-btn {
  width: 100%; height: 96rpx; line-height: 96rpx;
  background-color: #F43F5E; color: #fff;
  font-size: 28rpx; font-weight: 600;
  border-radius: 24rpx; border: none;
  box-shadow: 0 8rpx 24rpx rgba(244,63,94,0.3);
}
.submit-btn::after { border: none; }
