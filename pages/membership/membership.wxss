.mb-page { min-height: 100vh; background-color: #F5F5F5; padding-bottom: 40rpx; }

/* 会员卡片 */
.mb-card {
  margin: 24rpx 32rpx 0; border-radius: 32rpx; padding: 40rpx;
  background: linear-gradient(135deg, #FBBF24, #F97316);
  color: #fff; position: relative; overflow: hidden;
}
.mb-card-bg1 {
  position: absolute; top: -40rpx; right: -40rpx;
  width: 256rpx; height: 256rpx; background-color: rgba(255,255,255,0.1);
  border-radius: 50%;
}
.mb-card-bg2 {
  position: absolute; bottom: -48rpx; left: -48rpx;
  width: 160rpx; height: 160rpx; background-color: rgba(255,255,255,0.1);
  border-radius: 50%;
}
.mb-user { display: flex; align-items: center; gap: 24rpx; margin-bottom: 32rpx; position: relative; }
.mb-user-avatar {
  width: 96rpx; height: 96rpx; border-radius: 50%;
  border: 4rpx solid rgba(255,255,255,0.3); flex-shrink: 0;
}
.mb-user-info { display: flex; flex-direction: column; }
.mb-user-name { font-size: 28rpx; font-weight: 600; }
.mb-user-status { font-size: 22rpx; opacity: 0.8; margin-top: 4rpx; }
.mb-vip-row { display: flex; align-items: center; gap: 16rpx; position: relative; }
.mb-star { font-size: 36rpx; opacity: 0.9; }
.mb-vip-text { font-size: 32rpx; font-weight: 700; }

/* 权益 */
.mb-section {
  margin: 24rpx 32rpx 0; background-color: #fff;
  border-radius: 24rpx; padding: 32rpx;
}
.section-title { font-size: 28rpx; font-weight: 600; color: #1E293B; display: block; margin-bottom: 24rpx; }
.benefit-grid { display: flex; gap: 24rpx; text-align: center; }
.benefit-item { flex: 1; display: flex; flex-direction: column; align-items: center; gap: 8rpx; }
.benefit-icon {
  width: 80rpx; height: 80rpx; border-radius: 20rpx;
  display: flex; align-items: center; justify-content: center;
  font-size: 36rpx;
}
.benefit-icon-amber { background-color: #FFFBEB; }
.benefit-icon-blue { background-color: #EFF6FF; }
.benefit-icon-green { background-color: #ECFDF5; }
.benefit-name { font-size: 22rpx; font-weight: 500; color: #1E293B; }
.benefit-desc { font-size: 18rpx; color: #94A3B8; }

/* 套餐 */
.plan-list { display: flex; flex-direction: column; gap: 20rpx; }
.plan-card {
  display: flex; align-items: center; justify-content: space-between;
  padding: 28rpx; border: 4rpx solid #E2E8F0;
  border-radius: 24rpx; position: relative; overflow: hidden;
}
.plan-selected { border-color: #3B82F6; background-color: rgba(239,246,255,0.5); }
.plan-tag {
  position: absolute; top: 0; right: 0;
  font-size: 18rpx; color: #fff; padding: 4rpx 16rpx;
  border-radius: 0 0 0 16rpx;
}
.plan-left { display: flex; flex-direction: column; }
.plan-name { font-size: 28rpx; font-weight: 600; color: #1E293B; }
.plan-desc { font-size: 20rpx; color: #64748B; margin-top: 4rpx; }
.plan-right { text-align: right; }
.plan-price { font-size: 36rpx; font-weight: 700; color: #1E293B; display: block; }
.plan-selected .plan-price { color: #3B82F6; }
.plan-original { font-size: 20rpx; color: #94A3B8; text-decoration: line-through; }

/* 底部 */
.mb-bottom-area { margin: 32rpx 32rpx 0; }
.mb-pay-btn {
  width: 100%; height: 96rpx; line-height: 96rpx;
  background: linear-gradient(to right, #FBBF24, #F97316);
  color: #fff; font-size: 28rpx; font-weight: 600;
  border-radius: 24rpx; border: none;
  box-shadow: 0 8rpx 24rpx rgba(245,158,11,0.35);
}
.mb-pay-btn::after { border: none; }
.mb-hint {
  display: block; text-align: center;
  font-size: 20rpx; color: #94A3B8; margin-top: 16rpx;
}
