.ed-page { min-height: 100vh; background-color: #F8FAFC; padding-bottom: 120rpx; }
.ed-card { background-color: #fff; padding: 24rpx 32rpx; margin-bottom: 16rpx; }
.ed-author { display: flex; align-items: center; gap: 20rpx; margin-bottom: 24rpx; }
.ed-avatar { width: 72rpx; height: 72rpx; border-radius: 50%; background-color: #F1F5F9; display: flex; align-items: center; justify-content: center; font-size: 28rpx; flex-shrink: 0; }
.ed-author-info { display: flex; flex-direction: column; }
.ed-author-name { font-size: 26rpx; font-weight: 500; color: #1E293B; }
.ed-author-time { font-size: 20rpx; color: #94A3B8; }
.ed-fields { display: flex; flex-direction: column; gap: 16rpx; margin-bottom: 24rpx; }
.ed-field { display: flex; align-items: center; font-size: 24rpx; }
.ed-field-label { width: 140rpx; color: #64748B; font-weight: 600; flex-shrink: 0; }
.ed-field-value { color: #1E293B; }
.ed-content { font-size: 26rpx; color: #1E293B; line-height: 1.7; display: block; margin-bottom: 24rpx; }
.ed-images { display: flex; gap: 8rpx; margin-bottom: 24rpx; }
.ed-img-item { flex: 1; aspect-ratio: 1; border-radius: 12rpx; overflow: hidden; }
.ed-img { width: 100%; height: 100%; }
.ed-meta { display: flex; gap: 32rpx; }
.ed-meta-item { font-size: 22rpx; color: #94A3B8; }
.ed-section-title { font-size: 26rpx; font-weight: 600; color: #1E293B; display: block; margin-bottom: 24rpx; }
.comment-list { display: flex; flex-direction: column; gap: 28rpx; }
.comment-item { display: flex; gap: 16rpx; }
.comment-avatar { width: 56rpx; height: 56rpx; border-radius: 50%; background-color: #F1F5F9; display: flex; align-items: center; justify-content: center; font-size: 22rpx; flex-shrink: 0; }
.comment-body { flex: 1; }
.comment-header { display: flex; align-items: center; gap: 16rpx; margin-bottom: 8rpx; }
.comment-name { font-size: 24rpx; font-weight: 500; color: #1E293B; }
.comment-time { font-size: 20rpx; color: #94A3B8; }
.comment-text { font-size: 24rpx; color: #64748B; line-height: 1.6; }
.ed-bottom { position: fixed; bottom: 0; left: 0; right: 0; background-color: #fff; border-top: 1rpx solid #F1F5F9; padding: 16rpx 24rpx; display: flex; align-items: center; gap: 16rpx; padding-bottom: calc(16rpx + env(safe-area-inset-bottom)); }
.ed-input { flex: 1; background-color: #F1F5F9; border-radius: 9999rpx; padding: 16rpx 28rpx; font-size: 26rpx; }
.ed-send-btn { background-color: #F43F5E !important; color: #fff !important; font-size: 24rpx !important; padding: 12rpx 28rpx !important; border-radius: 9999rpx !important; height: auto !important; line-height: normal !important; }
