.bd-page { min-height: 100vh; background-color: #F5F5F5; padding-bottom: 40rpx; }

/* 余额卡片 */
.bd-card {
  margin: 24rpx 32rpx 0; border-radius: 32rpx; padding: 40rpx;
  background: linear-gradient(135deg, #FB923C, #F97316);
  color: #fff; position: relative; overflow: hidden;
}
.bd-card-bg {
  position: absolute; top: -32rpx; right: -32rpx;
  width: 224rpx; height: 224rpx; background-color: rgba(255,255,255,0.1);
  border-radius: 50%;
}
.bd-label { font-size: 22rpx; opacity: 0.8; display: block; margin-bottom: 8rpx; position: relative; }
.bd-amount-row { display: flex; align-items: baseline; gap: 12rpx; margin-bottom: 16rpx; position: relative; }
.bd-amount { font-size: 64rpx; font-weight: 700; }
.bd-unit { font-size: 28rpx; opacity: 0.8; }
.bd-stats { display: flex; gap: 32rpx; position: relative; }
.bd-stat { font-size: 20rpx; opacity: 0.7; }

/* Tab */
.bd-tab-wrap {
  margin: 24rpx 32rpx 0; background-color: #fff;
  border-radius: 16rpx; padding: 4rpx; display: flex;
}
.bd-tab {
  flex: 1; text-align: center; padding: 16rpx 0;
  font-size: 24rpx; color: #64748B; border-radius: 12rpx;
}
.bd-tab-active {
  background-color: #F97316; color: #fff; font-weight: 600;
}

/* 列表 */
.bd-list { margin: 0 32rpx; }
.bd-month { font-size: 20rpx; color: #94A3B8; display: block; margin: 24rpx 0 12rpx; }
.bd-group { background-color: #fff; border-radius: 20rpx; overflow: hidden; }
.bd-item { display: flex; align-items: center; padding: 24rpx; }
.bd-item-border { border-bottom: 1rpx solid #F8FAFC; }
.bd-icon-wrap {
  width: 64rpx; height: 64rpx; border-radius: 16rpx;
  display: flex; align-items: center; justify-content: center;
  flex-shrink: 0;
}
.bd-icon-green { background-color: #ECFDF5; }
.bd-icon-rose { background-color: #FFF1F2; }
.bd-icon { font-size: 28rpx; font-weight: 700; }
.bd-icon-green .bd-icon { color: #10B981; }
.bd-icon-rose .bd-icon { color: #F43F5E; }
.bd-info { flex: 1; margin-left: 20rpx; display: flex; flex-direction: column; gap: 4rpx; }
.bd-name { font-size: 24rpx; color: #1E293B; }
.bd-desc { font-size: 20rpx; color: #94A3B8; }
.bd-amount-text { font-size: 28rpx; font-weight: 600; flex-shrink: 0; }
.text-fresh { color: #10B981; }
.text-rose { color: #F43F5E; }

.bd-end { display: block; text-align: center; font-size: 20rpx; color: #CBD5E1; padding: 32rpx 0; }