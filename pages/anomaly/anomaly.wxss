.an-page { min-height: 100vh; background-color: #F8FAFC; padding-bottom: 200rpx; }
.an-card { background-color: #fff; border-radius: 24rpx; padding: 32rpx; margin: 24rpx 32rpx 0; }
.card-title { font-size: 28rpx; font-weight: 600; color: #1E293B; display: block; margin-bottom: 24rpx; }
.worker-select { display: flex; align-items: center; gap: 20rpx; background-color: #F8FAFC; border-radius: 16rpx; padding: 20rpx; }
.worker-info { flex: 1; display: flex; flex-direction: column; }
.worker-name { font-size: 24rpx; font-weight: 500; color: #1E293B; }
.worker-sub { font-size: 20rpx; color: #94A3B8; margin-top: 4rpx; }
.arrow { font-size: 28rpx; color: #94A3B8; flex-shrink: 0; }
.type-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 16rpx; }
.type-item { display: flex; align-items: center; gap: 16rpx; background-color: #F8FAFC; border: 2rpx solid #E2E8F0; border-radius: 16rpx; padding: 24rpx; }
.type-selected { background-color: #FFF1F2; border-color: #F43F5E; }
.type-icon { font-size: 32rpx; }
.type-label { font-size: 24rpx; color: #64748B; }
.type-selected .type-label { color: #F43F5E; font-weight: 500; }
.time-row { display: flex; gap: 20rpx; }
.time-box { flex: 1; background-color: #F8FAFC; border-radius: 16rpx; padding: 20rpx; text-align: center; }
.time-label { font-size: 20rpx; color: #94A3B8; display: block; margin-bottom: 8rpx; }
.time-val { font-size: 26rpx; font-weight: 500; color: #1E293B; }
.an-textarea { width: 100%; min-height: 120rpx; background-color: #F8FAFC; border-radius: 16rpx; padding: 20rpx; font-size: 24rpx; color: #1E293B; box-sizing: border-box; }
.photo-grid { display: flex; gap: 16rpx; }
.photo-add { width: 160rpx; height: 160rpx; background-color: #F8FAFC; border: 2rpx dashed #CBD5E1; border-radius: 16rpx; display: flex; flex-direction: column; align-items: center; justify-content: center; }
.photo-add-icon { font-size: 48rpx; color: #94A3B8; line-height: 1; }
.photo-add-text { font-size: 20rpx; color: #94A3B8; margin-top: 4rpx; }
.photo-item { width: 160rpx; height: 160rpx; border-radius: 16rpx; overflow: hidden; }
.photo-img { width: 100%; height: 100%; }
.photo-hint { font-size: 20rpx; color: #94A3B8; margin-top: 16rpx; display: block; }
.an-bottom { position: fixed; bottom: 0; left: 0; right: 0; background-color: #fff; padding: 20rpx 48rpx; padding-bottom: calc(20rpx + env(safe-area-inset-bottom)); box-shadow: 0 -4rpx 12rpx rgba(0,0,0,0.04); }
.btn-rose { background-color: #F43F5E !important; color: #fff !important; }
.an-hint { display: block; text-align: center; font-size: 20rpx; color: #94A3B8; margin-top: 12rpx; }
