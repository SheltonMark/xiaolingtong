.jd-page {
  min-height: 100vh;
  background-color: #F5F5F5;
  padding-bottom: 180rpx;
}
.salary-section {
  background-color: #ffffff;
  padding: 32rpx;
}
.salary-row {
  display: flex;
  align-items: baseline;
  gap: 4rpx;
  margin-bottom: 12rpx;
}
.salary-big { font-size: 48rpx; font-weight: 700; }
.salary-unit { font-size: 24rpx; font-weight: 500; }
.urgent-badge {
  font-size: 20rpx;
  color: #F43F5E;
  background-color: #FFF1F2;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  margin-left: 16rpx;
}
.jd-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1E293B;
  display: block;
  margin-bottom: 12rpx;
}
.location-row {
  display: flex;
  align-items: center;
  gap: 8rpx;
}
.loc-icon { font-size: 24rpx; }
.loc-text { font-size: 24rpx; color: #64748B; }
.detail-card {
  background-color: #ffffff;
  margin-top: 20rpx;
  padding: 32rpx;
}
.card-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #1E293B;
  display: block;
  margin-bottom: 20rpx;
}
.detail-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}
.detail-row { display: flex; }
.dl {
  width: 140rpx;
  font-size: 24rpx;
  color: #64748B;
  flex-shrink: 0;
}
.dv { font-size: 24rpx; color: #1E293B; flex: 1; }
.detail-desc {
  font-size: 24rpx;
  color: #64748B;
  line-height: 1.625;
  margin-top: 20rpx;
  display: block;
}
.tags-wrap {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}
.benefit-tag {
  font-size: 22rpx;
  background-color: #ECFDF5;
  color: #10B981;
  padding: 8rpx 24rpx;
  border-radius: 8rpx;
}
.company-row {
  display: flex;
  align-items: center;
  gap: 20rpx;
}
.comp-avatar-img {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  flex-shrink: 0;
}
.comp-info { display: flex; flex-direction: column; }
.comp-name-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}
.comp-name { font-size: 28rpx; font-weight: 600; color: #1E293B; }
.cert-badge {
  font-size: 20rpx;
  background-color: #10B981;
  color: #ffffff;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}
.comp-credit { font-size: 22rpx; color: #64748B; margin-top: 4rpx; }
.apply-wrap {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #ffffff;
  padding: 20rpx 48rpx;
  box-shadow: 0 -4rpx 12rpx rgba(0,0,0,0.04);
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}
.apply-hint {
  display: block;
  text-align: center;
  font-size: 20rpx;
  color: #94A3B8;
  margin-top: 12rpx;
}
