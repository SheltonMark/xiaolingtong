<!--pages/work-record/work-record.wxml-->
<view class="wr-page">
  <!-- 顶部提示 -->
  <view class="wr-tip">
    <text class="iconfont icon-anquan wr-tip-icon"></text>
    <text class="wr-tip-text">您已被指定为临时管理员，请按时完成各项监管任务</text>
  </view>

  <!-- 订单列表 -->
  <view class="wr-list">
    <view class="order-card" wx:for="{{orders}}" wx:key="id"
          data-id="{{item.id}}" data-stage="{{item.stage}}" data-mode="{{item.mode}}"
          bindtap="onOrderTap">
      <view class="order-top">
        <view class="text-avatar text-avatar-sm" style="background-color: {{item.avatarColor}};">{{item.avatarText}}</view>
        <view class="order-info">
          <text class="order-company">{{item.company}}</text>
          <text class="order-meta">{{item.jobType}} · {{item.salary}}</text>
        </view>
        <view class="order-stage" style="color: {{item.stageColor}}; background-color: {{item.stageBg}};">
          {{item.stageText}}
        </view>
      </view>
      <view class="order-bottom">
        <text class="order-detail"><text class="iconfont icon-riqixuanze"></text> {{item.dateRange}}</text>
        <text class="order-detail"><text class="iconfont icon-worker"></text> {{item.workerCount}}人</text>
        <text class="order-detail">{{item.mode === 'hourly' ? '计时' : '计件'}}</text>
      </view>
    </view>
  </view>

  <!-- 空状态 -->
  <view class="wr-empty" wx:if="{{orders.length === 0}}">
    <text class="iconfont icon-kongkong wr-empty-icon"></text>
    <text class="wr-empty-text">暂无管理任务</text>
  </view>
</view>
