.wr-page { min-height: 100vh; background-color: #F5F5F5; }

/* 顶部提示 */
.wr-tip {
  margin: 24rpx 32rpx 0; background-color: #EFF6FF;
  border-radius: 16rpx; padding: 20rpx 24rpx;
  display: flex; align-items: center; gap: 12rpx;
}
.wr-tip-icon { font-size: 28rpx; color: #3B82F6; flex-shrink: 0; }
.wr-tip-text { font-size: 22rpx; color: #3B82F6; line-height: 1.5; }

/* 订单列表 */
.wr-list { padding: 24rpx 32rpx 0; display: flex; flex-direction: column; gap: 20rpx; }

.order-card {
  background-color: #fff; border-radius: 24rpx; padding: 28rpx 24rpx;
}
.order-top {
  display: flex; align-items: center; gap: 16rpx; margin-bottom: 20rpx;
}
.order-info { flex: 1; display: flex; flex-direction: column; gap: 4rpx; }
.order-company { font-size: 28rpx; font-weight: 600; color: #1E293B; }
.order-meta { font-size: 22rpx; color: #64748B; }
.order-stage {
  font-size: 20rpx; font-weight: 500; padding: 6rpx 16rpx;
  border-radius: 8rpx; flex-shrink: 0;
}

.order-bottom {
  display: flex; align-items: center; gap: 24rpx;
  padding-top: 16rpx; border-top: 1rpx solid #F1F5F9;
}
.order-detail { font-size: 22rpx; color: #94A3B8; display: flex; align-items: center; gap: 6rpx; }
.order-detail .iconfont { font-size: 24rpx; }

/* 空状态 */
.wr-empty {
  display: flex; flex-direction: column; align-items: center;
  justify-content: center; padding-top: 200rpx;
}
.wr-empty-icon { font-size: 120rpx; color: #E2E8F0; }
.wr-empty-text { font-size: 24rpx; color: #94A3B8; margin-top: 16rpx; }
