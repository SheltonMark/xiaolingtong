.wr-page { min-height: 100vh; background-color: #F5F5F5; padding-bottom: 160rpx; }
.status-card {
  margin: 20rpx 24rpx 0; border-radius: 24rpx; padding: 32rpx;
  background: linear-gradient(135deg, #3B82F6, #60A5FA); color: #ffffff;
}
.sc-top { display: flex; align-items: center; justify-content: space-between; margin-bottom: 24rpx; }
.sc-company { font-size: 24rpx; opacity: 0.9; }
.sc-badge { font-size: 20rpx; background-color: rgba(255,255,255,0.2); padding: 4rpx 16rpx; border-radius: 8rpx; }
.sc-hours { display: flex; align-items: baseline; gap: 8rpx; margin-bottom: 8rpx; }
.sc-hours-big { font-size: 64rpx; font-weight: 700; }
.sc-hours-unit { font-size: 28rpx; opacity: 0.8; }
.sc-sub { font-size: 22rpx; opacity: 0.7; display: block; margin-bottom: 24rpx; }
.sc-stats { display: flex; background-color: rgba(255,255,255,0.15); border-radius: 16rpx; padding: 20rpx; }
.sc-stat { flex: 1; display: flex; flex-direction: column; align-items: center; gap: 4rpx; }
.sc-stat-val { font-size: 28rpx; font-weight: 600; }
.sc-stat-label { font-size: 20rpx; opacity: 0.7; }
.wr-card { background-color: #ffffff; margin: 20rpx 24rpx 0; border-radius: 24rpx; padding: 32rpx; }
.card-title { font-size: 28rpx; font-weight: 600; color: #1E293B; display: block; margin-bottom: 20rpx; }
.card-header-row { display: flex; align-items: center; justify-content: space-between; margin-bottom: 20rpx; }
.card-header-row .card-title { margin-bottom: 0; }
.record-btn { font-size: 22rpx; color: #F43F5E; background-color: #FFF1F2; padding: 8rpx 20rpx; border-radius: 8rpx; }
.photo-list { display: flex; flex-direction: column; gap: 16rpx; }
.photo-item {
  display: flex; align-items: center; justify-content: space-between;
  padding: 20rpx; border-radius: 16rpx;
}
.photo-done { background-color: #ECFDF5; }
.photo-pending { background-color: #FFFBEB; }
.photo-left { display: flex; flex-direction: column; gap: 4rpx; }
.photo-time { font-size: 26rpx; font-weight: 500; color: #1E293B; }
.photo-status { font-size: 22rpx; color: #10B981; }
.photo-status-pending { color: #F59E0B; }
.photo-right { display: flex; align-items: center; }
.photo-check { font-size: 28rpx; color: #10B981; font-weight: 600; }
.photo-btn { font-size: 22rpx; color: #3B82F6; background-color: #EFF6FF; padding: 8rpx 24rpx; border-radius: 8rpx; }
.anomaly-list { display: flex; flex-direction: column; gap: 16rpx; }
.anomaly-item { padding: 16rpx; background-color: #FFF1F2; border-radius: 12rpx; }
.anomaly-top { display: flex; align-items: center; justify-content: space-between; margin-bottom: 8rpx; }
.anomaly-name { font-size: 24rpx; font-weight: 500; color: #1E293B; }
.anomaly-time { font-size: 22rpx; color: #94A3B8; }
.anomaly-desc { font-size: 22rpx; color: #64748B; }
.empty-text { font-size: 24rpx; color: #94A3B8; }
.wr-bottom {
  position: fixed; bottom: 0; left: 0; right: 0; padding: 20rpx 48rpx;
  background-color: #ffffff; box-shadow: 0 -4rpx 12rpx rgba(0,0,0,0.04);
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}
.btn-rose { background-color: #F43F5E !important; color: #ffffff !important; }
.wr-hint { display: block; text-align: center; font-size: 20rpx; color: #94A3B8; margin-top: 12rpx; }
