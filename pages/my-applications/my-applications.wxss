.ma-page { min-height: 100vh; background-color: #F5F5F5; }
.tab-bar {
  display: flex; background-color: #fff; padding: 0 24rpx;
  border-bottom: 1rpx solid #F1F5F9;
}
.tab-item {
  flex: 1; text-align: center; padding: 20rpx 0;
  font-size: 24rpx; color: #64748B; position: relative;
}
.tab-active { color: #F97316; font-weight: 600; }
.tab-active::after {
  content: ''; position: absolute; bottom: 0; left: 50%;
  transform: translateX(-50%); width: 48rpx; height: 4rpx;
  background-color: #F97316; border-radius: 4rpx;
}
.app-list { padding: 24rpx 32rpx; }
.app-card {
  background-color: #fff; border-radius: 24rpx;
  padding: 32rpx; margin-bottom: 24rpx;
}
.card-faded { opacity: 0.6; }
.app-header {
  display: flex; align-items: center;
  justify-content: space-between; margin-bottom: 16rpx;
}
.app-header-left { display: flex; align-items: center; gap: 16rpx; }
.app-avatar-img {
  width: 64rpx; height: 64rpx; border-radius: 50%; flex-shrink: 0;
}
.app-company { font-size: 24rpx; font-weight: 500; color: #1E293B; }

/* 状态标签 */
.status-tag {
  display: flex; align-items: center; gap: 6rpx;
  font-size: 20rpx; padding: 4rpx 16rpx;
  border-radius: 8rpx; font-weight: 500;
}
.status-bg-amber { background-color: #FFFBEB; color: #F59E0B; }
.status-bg-green { background-color: #ECFDF5; color: #10B981; }
.status-bg-gray { background-color: #F1F5F9; color: #64748B; }
.status-bg-rose { background-color: #FFF1F2; color: #F43F5E; }
.pulse-dot {
  width: 12rpx; height: 12rpx; background-color: #10B981;
  border-radius: 50%;
}

.app-job-line {
  font-size: 26rpx; font-weight: 500; color: #1E293B;
  display: block; margin-bottom: 8rpx;
}
.app-date-row {
  display: flex; align-items: center; gap: 8rpx; margin-bottom: 20rpx;
}
.date-icon { font-size: 22rpx; }
.app-date { font-size: 20rpx; color: #94A3B8; }

/* 提醒 */
.app-alert {
  display: flex; align-items: center; gap: 8rpx;
  background-color: #FFFBEB; border-radius: 12rpx;
  padding: 16rpx 20rpx; margin-bottom: 20rpx;
}
.alert-icon { font-size: 24rpx; }
.alert-text { font-size: 20rpx; color: #92400E; flex: 1; }

/* 统计 */
.app-stats {
  display: flex; background-color: #F8FAFC; border-radius: 16rpx;
  padding: 20rpx; margin-bottom: 20rpx;
}
.stat-item {
  flex: 1; display: flex; flex-direction: column;
  align-items: center; gap: 4rpx;
}
.stat-value { font-size: 28rpx; font-weight: 700; }
.stat-label { font-size: 20rpx; color: #94A3B8; }

/* 确认出勤按钮 */
.confirm-btn {
  width: 100%; height: 72rpx; line-height: 72rpx;
  background-color: #F97316; color: #fff;
  font-size: 24rpx; font-weight: 600;
  border-radius: 16rpx; border: none;
  box-shadow: 0 4rpx 16rpx rgba(249,115,22,0.25);
}
.confirm-btn::after { border: none; }

/* 操作按钮 */
.app-actions { display: flex; gap: 16rpx; }
.act-btn {
  flex: 1; font-size: 22rpx; font-weight: 500;
  padding: 12rpx 0; border-radius: 12rpx;
  text-align: center; border: none; line-height: 1.4;
}
.act-btn::after { border: none; }
.act-blue { background-color: #EFF6FF; color: #3B82F6; }
.act-orange { background-color: #FFF7ED; color: #F97316; }
