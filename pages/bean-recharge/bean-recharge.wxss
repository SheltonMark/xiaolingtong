.br-page { min-height: 100vh; background-color: #F5F5F5; padding-bottom: 40rpx; }

/* 余额卡片 */
.balance-card {
  margin: 24rpx 32rpx 0; border-radius: 32rpx; padding: 40rpx;
  background: linear-gradient(135deg, #FB923C, #F97316);
  color: #fff; position: relative; overflow: hidden;
}
.bal-bg {
  position: absolute; top: -32rpx; right: -32rpx;
  width: 224rpx; height: 224rpx; background-color: rgba(255,255,255,0.1);
  border-radius: 50%;
}
.bal-label { font-size: 22rpx; opacity: 0.8; display: block; margin-bottom: 8rpx; position: relative; }
.bal-row { display: flex; align-items: baseline; gap: 12rpx; margin-bottom: 8rpx; position: relative; }
.bal-value { font-size: 64rpx; font-weight: 700; }
.bal-unit { font-size: 28rpx; opacity: 0.8; }
.bal-hint { font-size: 20rpx; opacity: 0.7; display: block; position: relative; }

/* 灵豆说明 */
.bean-tip {
  margin: 24rpx 32rpx 0; background-color: #FFFBEB;
  border-radius: 24rpx; padding: 24rpx;
  display: flex; gap: 16rpx; align-items: flex-start;
}
.tip-icon { font-size: 28rpx; flex-shrink: 0; margin-top: 4rpx; }
.tip-content { flex: 1; }
.tip-title { font-size: 24rpx; font-weight: 500; color: #92400E; display: block; margin-bottom: 4rpx; }
.tip-text { font-size: 20rpx; color: #B45309; line-height: 1.6; }

/* 充值套餐 */
.pkg-section {
  margin: 24rpx 32rpx 0; background-color: #fff;
  border-radius: 24rpx; padding: 32rpx;
}
.section-title { font-size: 28rpx; font-weight: 600; color: #1E293B; display: block; margin-bottom: 24rpx; }
.pkg-grid { display: flex; flex-wrap: wrap; gap: 16rpx; }
.pkg-item {
  width: calc(33.33% - 11rpx); background-color: #fff;
  border-radius: 20rpx; padding: 24rpx 0;
  display: flex; flex-direction: column; align-items: center; gap: 4rpx;
  border: 2rpx solid #E2E8F0; position: relative; box-sizing: border-box;
}
.pkg-selected { border-color: #F97316; border-width: 4rpx; background-color: #FFF7ED; }
.pkg-tag {
  position: absolute; top: -16rpx; left: 50%; transform: translateX(-50%);
  font-size: 16rpx; color: #fff; padding: 2rpx 16rpx;
  border-radius: 9999rpx; white-space: nowrap;
}
.pkg-beans { font-size: 36rpx; font-weight: 700; color: #F97316; }
.pkg-beans-label { font-size: 20rpx; color: #64748B; margin-bottom: 8rpx; }
.pkg-price { font-size: 26rpx; font-weight: 600; color: #1E293B; }
.pkg-save { font-size: 18rpx; color: #10B981; }

/* 最近记录 */
.record-section {
  margin: 24rpx 32rpx 0; background-color: #fff;
  border-radius: 24rpx; padding: 32rpx;
}
.record-header {
  display: flex; align-items: center; justify-content: space-between;
  margin-bottom: 24rpx;
}
.record-all { font-size: 20rpx; color: #3B82F6; }
.record-list { display: flex; flex-direction: column; gap: 20rpx; }
.record-item { display: flex; align-items: center; justify-content: space-between; }
.record-left { display: flex; flex-direction: column; gap: 4rpx; }
.record-name { font-size: 24rpx; color: #1E293B; }
.record-time { font-size: 20rpx; color: #94A3B8; }
.record-amount { font-size: 24rpx; font-weight: 500; }

/* 底部 */
.br-bottom-area { margin: 32rpx 32rpx 0; }
.br-pay-btn {
  width: 100%; height: 96rpx;
  display: flex; align-items: center; justify-content: center;
  background-color: #F97316; color: #fff;
  font-size: 28rpx; font-weight: 600;
  border-radius: 24rpx; border: none;
  box-shadow: 0 8rpx 24rpx rgba(249,115,22,0.3);
}
.br-pay-btn::after { border: none; }
