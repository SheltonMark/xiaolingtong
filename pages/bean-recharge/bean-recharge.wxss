.br-page { min-height: 100vh; background-color: #F5F5F5; padding-bottom: 140rpx; }
.balance-card { margin: 20rpx 24rpx 0; background: linear-gradient(135deg, #3B82F6, #60A5FA); border-radius: 24rpx; padding: 40rpx 32rpx; color: #fff; display: flex; flex-direction: column; align-items: center; gap: 12rpx; }
.bal-label { font-size: 24rpx; opacity: 0.8; }
.bal-value { font-size: 48rpx; font-weight: 700; }
.pkg-grid { margin: 24rpx 24rpx 0; display: flex; flex-wrap: wrap; gap: 16rpx; }
.pkg-item { width: calc(33.33% - 12rpx); background-color: #fff; border-radius: 20rpx; padding: 24rpx 0; display: flex; flex-direction: column; align-items: center; gap: 8rpx; border: 2rpx solid transparent; position: relative; }
.pkg-selected { border-color: #3B82F6; background-color: #EFF6FF; }
.pkg-tag { position: absolute; top: -2rpx; right: -2rpx; font-size: 18rpx; background-color: #F43F5E; color: #fff; padding: 4rpx 12rpx; border-radius: 0 20rpx 0 12rpx; }
.pkg-beans { font-size: 36rpx; font-weight: 700; color: #1E293B; }
.pkg-beans-label { font-size: 20rpx; color: #94A3B8; }
.pkg-price { font-size: 26rpx; font-weight: 600; color: #3B82F6; }
.br-info { margin: 24rpx 24rpx 0; background-color: #fff; border-radius: 24rpx; padding: 32rpx; }
.info-title { font-size: 26rpx; font-weight: 600; color: #1E293B; display: block; margin-bottom: 16rpx; }
.info-text { font-size: 22rpx; color: #94A3B8; display: block; line-height: 2; }
.br-bottom { position: fixed; bottom: 0; left: 0; right: 0; padding: 20rpx 48rpx; background-color: #fff; box-shadow: 0 -4rpx 12rpx rgba(0,0,0,0.04); padding-bottom: calc(20rpx + env(safe-area-inset-bottom)); }
