<!--pages/bean-recharge/bean-recharge.wxml-->
<view class="br-page">
  <view class="balance-card">
    <text class="bal-label">当前灵豆</text>
    <text class="bal-value">💎 {{balance}}</text>
  </view>
  <view class="pkg-grid">
    <view class="pkg-item {{selectedIndex === index ? 'pkg-selected' : ''}}"
          wx:for="{{packages}}" wx:key="id"
          data-index="{{index}}" bindtap="onSelect">
      <text class="pkg-tag" wx:if="{{item.tag}}">{{item.tag}}</text>
      <text class="pkg-beans">{{item.beans}}</text>
      <text class="pkg-beans-label">灵豆</text>
      <text class="pkg-price">¥{{item.price}}</text>
    </view>
  </view>
  <view class="br-info">
    <text class="info-title">灵豆说明</text>
    <text class="info-text">· 灵豆可用于查看联系方式、信息置顶等</text>
    <text class="info-text">· 充值后不支持退款</text>
    <text class="info-text">· 灵豆有效期为充值后365天</text>
  </view>
  <view class="br-bottom">
    <button class="btn btn-primary" bindtap="onPay">立即充值 ¥{{packages[selectedIndex].price}}</button>
  </view>
</view>
